<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
  <%= form_with(model: fleet_provider, class: "space-y-6 bg-white dark:bg-slate-800 p-8 rounded-lg shadow") do |form| %>
    <% if fleet_provider.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <h2 class="font-semibold mb-2"><%= pluralize(fleet_provider.errors.count, "error") %> prohibited this Fleet Provider from being saved:</h2>
        <ul class="list-disc list-inside text-sm">
          <% fleet_provider.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.text_field :name, class: "form-input mt-1 block w-full" %>
    </div>

    <div>
      <%= form.label :registration_number, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.text_field :registration_number, class: "form-input mt-1 block w-full" %>
    </div>

    <div>
      <%= form.label :physical_address, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.text_field :physical_address, class: "form-input mt-1 block w-full" %>
    </div>

    <div>
      <%= form.label :phone_number, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.text_field :phone_number, class: "form-input mt-1 block w-full" %>
    </div>

    <div>
      <%= form.label :email, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.email_field :email, class: "form-input mt-1 block w-full" %>
    </div>

    <div>
      <%= form.label :license_status, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.radio_button :license_status, "active", class: "form-radio mt-1" %>
      <%= form.label :license_status_active, "Active", class: "ml-2" %>
      <%= form.radio_button :license_status, "inactive", class: "form-radio mt-1" %>
      <%= form.label :license_status_inactive, "Inactive", class: "ml-2" %>
    </div>

    <div>
      <%= form.label :license_expiry_date, class: "block font-medium text-gray-700 dark:text-slate-200" %>
      <%= form.date_field :license_expiry_date, class: "form-input mt-1 block w-full" %>
    </div>

    <div class="mt-4">
      <%= form.label :logo, "Upload Logo", class: "block text-sm font-medium text-slate-700 dark:text-slate-200" %>
      <%= form.file_field :logo, class: "mt-1 block w-full" %>
    </div>

    <!-- Delivery Service Configuration -->
    <div class="border-t border-gray-200 dark:border-slate-600 pt-6 mt-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Delivery Service Settings</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :is_delivery_enabled, class: "flex items-center space-x-2" do %>
            <%= form.check_box :is_delivery_enabled, class: "form-checkbox h-4 w-4 text-blue-600" %>
            <span class="text-sm font-medium text-gray-700 dark:text-slate-200">Enable Delivery Service</span>
          <% end %>
        </div>
        
        <div>
          <%= form.label :delivery_radius_km, "Delivery Radius (km)", class: "block text-sm font-medium text-gray-700 dark:text-slate-200" %>
          <%= form.number_field :delivery_radius_km, min: 1, max: 200, value: fleet_provider.delivery_radius_km || 50, class: "form-input mt-1 block w-full" %>
        </div>
        
        <div>
          <%= form.label :min_delivery_fee, "Minimum Delivery Fee (KES)", class: "block text-sm font-medium text-gray-700 dark:text-slate-200" %>
          <%= form.number_field :min_delivery_fee, step: 0.01, min: 0, value: fleet_provider.min_delivery_fee || 5.0, class: "form-input mt-1 block w-full" %>
        </div>
        
        <div>
          <%= form.label :max_delivery_fee, "Maximum Delivery Fee (KES)", class: "block text-sm font-medium text-gray-700 dark:text-slate-200" %>
          <%= form.number_field :max_delivery_fee, step: 0.01, min: 0, value: fleet_provider.max_delivery_fee || 100.0, class: "form-input mt-1 block w-full" %>
        </div>
        
        <div>
          <%= form.label :delivery_commission_rate, "Commission Rate (0.0-1.0)", class: "block text-sm font-medium text-gray-700 dark:text-slate-200" %>
          <%= form.number_field :delivery_commission_rate, step: 0.01, min: 0, max: 1, value: fleet_provider.delivery_commission_rate || 0.15, class: "form-input mt-1 block w-full" %>
          <p class="text-xs text-gray-500 mt-1">Driver commission as decimal (0.15 = 15%)</p>
        </div>
        
        <div>
          <%= form.label :delivery_per_km_rate, "Per Kilometer Rate (KES)", class: "block text-sm font-medium text-gray-700 dark:text-slate-200" %>
          <%= form.number_field :delivery_per_km_rate, step: 0.01, min: 0, value: fleet_provider.delivery_per_km_rate || 2.0, class: "form-input mt-1 block w-full" %>
          <p class="text-xs text-gray-500 mt-1">Additional fee per kilometer</p>
        </div>
      </div>
    </div>

    <div class="pt-4">
      <%= form.submit "Save Fleet Provider", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
