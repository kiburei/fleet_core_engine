<div class="max-w-4xl mx-auto bg-white dark:bg-slate-800 p-6 rounded-lg shadow space-y-6">

  <!-- Condensed Profile Header -->
  <div class="flex items-center gap-4 mb-4">
    <div class="w-16 h-16 rounded-full overflow-hidden bg-slate-200 flex items-center justify-center">
      <%= image_tag(
              fleet_provider.logo.attached? ? url_for(fleet_provider.logo) : demo_avatar_url(id: fleet_provider.id, variant: fleet_provider.name),
              alt: fleet_provider.name,
              class: "object-cover w-full h-full"
            ) %>
    </div>
    <div>
      <h1 class="text-xl font-semibold text-slate-900 dark:text-white"><%= fleet_provider.name %></h1>
      <p class="text-xs text-slate-500 mt-0.5"><%= fleet_provider.registration_number %></p>
    </div>
  </div>

  <!-- Tighter Info Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <p class="text-xs text-slate-500">Phone</p>
      <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.phone_number %></p>
    </div>
    <div>
      <p class="text-xs text-slate-500">Email</p>
      <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.email %></p>
    </div>
    <div>
      <p class="text-xs text-slate-500">License Status</p>
      <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.license_status %></p>
    </div>
    <div>
      <p class="text-xs text-slate-500">License Expiry</p>
      <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.license_expiry_date.strftime('%B %d, %Y') %></p>
    </div>
    <div class="sm:col-span-2">
      <p class="text-xs text-slate-500">Physical Address</p>
      <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.physical_address %></p>
    </div>
  </div>

  <!-- Delivery Service Information -->
  <div class="border-t border-slate-200 dark:border-slate-600 pt-6">
    <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Delivery Service</h2>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="flex items-center space-x-2">
        <% if fleet_provider.is_delivery_enabled %>
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          <span class="text-sm text-green-600 font-medium">Delivery Enabled</span>
        <% else %>
          <div class="w-3 h-3 bg-red-500 rounded-full"></div>
          <span class="text-sm text-red-600 font-medium">Delivery Disabled</span>
        <% end %>
      </div>
      
      <% if fleet_provider.is_delivery_enabled %>
        <div>
          <p class="text-xs text-slate-500">Service Radius</p>
          <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.delivery_radius_km || 50 %> km</p>
        </div>
        
        <div>
          <p class="text-xs text-slate-500">Fee Range</p>
          <p class="text-sm text-slate-900 dark:text-white">
            $<%= fleet_provider.min_delivery_fee || 5.0 %> - $<%= fleet_provider.max_delivery_fee || 100.0 %>
          </p>
        </div>
        
        <div>
          <p class="text-xs text-slate-500">Per KM Rate</p>
          <p class="text-sm text-slate-900 dark:text-white">$<%= fleet_provider.delivery_per_km_rate || 2.0 %></p>
        </div>
        
        <div>
          <p class="text-xs text-slate-500">Commission Rate</p>
          <p class="text-sm text-slate-900 dark:text-white"><%= ((fleet_provider.delivery_commission_rate || 0.15) * 100).round(1) %>%</p>
        </div>
        
        <div>
          <p class="text-xs text-slate-500">Active Deliveries</p>
          <p class="text-sm text-slate-900 dark:text-white"><%= fleet_provider.delivery_requests.where(status: ['assigned', 'picked_up', 'in_transit']).count %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Related Models -->
  <div class="border-t border-slate-200 dark:border-slate-600 pt-6">
    <h2 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Fleet Summary</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
      <%= link_to "#{fleet_provider.vehicles.count} Vehicles", fleet_provider_vehicles_path(fleet_provider), class: "bg-blue-500 dark:bg-blue-900/30 text-blue-700 dark:text-blue-200 p-4 rounded-md shadow text-center font-medium hover:bg-blue-100 dark:hover:bg-blue-800 transition" %>
      <%= link_to "#{fleet_provider.drivers.count} Drivers", fleet_provider_drivers_path(fleet_provider), class: "bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-200 p-4 rounded-md shadow text-center font-medium hover:bg-green-100 dark:hover:bg-green-800 transition" %>
      <%= link_to "#{fleet_provider.trips.count} Trips", fleet_provider_trips_path(fleet_provider), class: "bg-yellow-500 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-200 p-4 rounded-md shadow text-center font-medium hover:bg-yellow-100 dark:hover:bg-yellow-800 transition" %>
      <%= link_to "#{fleet_provider.incidents.count} Incidents", fleet_provider_incidents_path(fleet_provider), class: "bg-red-500 dark:bg-red-900/30 text-red-700 dark:text-red-200 p-4 rounded-md shadow text-center font-medium hover:bg-red-100 dark:hover:bg-red-800 transition" %>
      <% if fleet_provider.is_delivery_enabled %>
        <div class="bg-purple-50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-200 p-4 rounded-md shadow text-center font-medium">
          <div class="text-lg font-bold"><%= fleet_provider.delivery_requests.count %></div>
          <div class="text-sm">Total Deliveries</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
