<!-- Fleet Provider Dashboard Partial -->
<div class="px-4">
  <div class="grid grid-cols-12 md:gap-6 gap-4 mt-4 container mx-auto mb-24">
    
    <!-- My Fleet Overview -->
    <div class="col-span-12 mb-6">
      <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">My Fleet Overview</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        
        <!-- My Fleet Providers Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-blue-50 dark:bg-blue-600/30">
              <%= icon "building-office", class: "size-5 text-blue-600 stroke-current dark:text-blue-300" %>
            </div>
            <div class="flex-1">
              <span class="text-blue-500 dark:text-blue-400/90 text-sm font-medium">Fleet Providers</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h2 tracking-tight"><%= @dashboard_data[:my_fleet_providers] %></h3>
              </div>
              <p class="text-sm text-slate-400">Total Fleet Providers</p>
            </div>
          </div>
        </div>

        <!-- My Vehicles Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-primary-50 dark:bg-primary-600/30">
              <%= icon "truck", class: "size-5 text-primary-600 stroke-current dark:text-primary-300" %>
            </div>
            <div class="flex-1">
              <span class="text-primary-500 dark:text-primary-400/90 text-sm font-medium">Total Vehicles</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h2 tracking-tight"><%= @dashboard_data[:total_vehicles] %></h3>
                <p class="text-green-600">+<%= @dashboard_data[:active_vehicles] %></p>
              </div>
              <p class="text-sm text-slate-400">Active: <strong class="text-slate-600 dark:text-slate-400"><%= @dashboard_data[:active_vehicles] %></strong></p>
            </div>
          </div>
        </div>

        <!-- My Drivers Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-green-50 dark:bg-green-600/30">
              <%= icon "user", class: "size-5 text-green-600 stroke-current dark:text-green-300" %>
            </div>
            <div class="flex-1">
              <span class="text-green-500 dark:text-green-400/90 text-sm font-medium">My Drivers</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h2 tracking-tight"><%= @dashboard_data[:total_drivers] %></h3>
              </div>
              <p class="text-sm text-slate-400">System wide</p>
            </div>
          </div>
        </div>

        <!-- Active Trips Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-amber-50 dark:bg-amber-600/30">
              <%= icon "map", class: "size-5 text-amber-600 stroke-current dark:text-amber-300" %>
            </div>
            <div class="flex-1">
              <span class="text-amber-500 dark:text-amber-400/90 text-sm font-medium">Active Trips</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h2 tracking-tight"><%= @dashboard_data[:active_trips] %></h3>
                <p class="text-green-600">+<%= @dashboard_data[:completed_trips_today] %></p>
              </div>
              <p class="text-sm text-slate-400">Completed today: <strong class="text-slate-600 dark:text-slate-400"><%= @dashboard_data[:completed_trips_today] %></strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- My Maintenance Overview -->
    <div class="col-span-12 mb-6">
      <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">My Maintenance Overview</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        
        <!-- Total Maintenance Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-red-50 dark:bg-red-600/30">
              <%= icon "wrench-screwdriver", class: "size-5 text-red-600 stroke-current dark:text-red-300" %>
            </div>
            <div class="flex-1">
              <span class="text-red-500 dark:text-red-400/90 text-sm font-medium">Total Maintenance</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h2 tracking-tight"><%= @dashboard_data[:total_maintenances] %></h3>
                <p class="text-red-600"><%= @dashboard_data[:pending_maintenances] %></p>
              </div>
              <p class="text-sm text-slate-400">Pending: <strong class="text-slate-600 dark:text-slate-400"><%= @dashboard_data[:pending_maintenances] %></strong></p>
            </div>
          </div>
        </div>

        <!-- Maintenance Cost Card -->
        <div class="rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-4">
          <div class="flex items-start gap-3">
            <div class="rounded-full size-10 flex items-center justify-center bg-green-50 dark:bg-green-600/30">
              <%= icon "currency-dollar", class: "size-5 text-green-600 stroke-current dark:text-green-300" %>
            </div>
            <div class="flex-1">
              <span class="text-green-500 dark:text-green-400/90 text-sm font-medium">Monthly Cost</span>
              <div class="flex items-center space-x-2 mt-1 mb-2">
                <h3 class="h3 tracking-tight">KES <%= number_with_comma(@dashboard_data[:maintenance_cost_this_month]) %></h3>
              </div>
              <p class="text-sm text-slate-400">This month</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Fleet Activity -->
    <div class="col-span-12 rounded-lg shadow-xs border border-slate-200 bg-white dark:bg-slate-800 dark:border-none p-6 dark:text-slate-300">
      <div class="flex items-start justify-between pb-6">
        <h4 class="h6">Recent Fleet Activity</h4>
      </div>

      <div class="space-y-4">
        <% @dashboard_data[:recent_vehicles].each do |vehicle| %>
          <div class="flex items-center justify-between p-3 bg-slate-50 dark:bg-slate-700 rounded-lg">
            <div class="flex items-center gap-3">
              <%= icon "truck", class: "size-5 text-slate-400" %>
              <div>
              <p class="font-medium text-slate-900 dark:text-white"><%= vehicle.registration_number %></p>
              <p class="text-sm text-slate-500 dark:text-slate-400"><%= vehicle.vehicle_model&.name || 'Unknown Model' %> â€¢ <%= vehicle.fleet_provider&.name || 'Unknown Fleet' %></p>
              </div>
            </div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= vehicle.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= vehicle.status.titleize %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
