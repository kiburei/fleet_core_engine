<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Customer Analytics</h1>
        <p class="text-gray-600">Insights into customer performance and business metrics</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Back to Customers", admin_customers_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <div class="relative">
          <select id="date-range-select" class="border border-gray-300 rounded-md px-3 py-2 text-sm">
            <option value="7" <%= 'selected' if params[:date_range] == '7' %>>Last 7 days</option>
            <option value="30" <%= 'selected' if params[:date_range] == '30' || params[:date_range].blank? %>>Last 30 days</option>
            <option value="90" <%= 'selected' if params[:date_range] == '90' %>>Last 90 days</option>
            <option value="365" <%= 'selected' if params[:date_range] == '365' %>>Last year</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Customers</p>
          <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:total_customers] %></p>
          <p class="text-xs text-green-600">
            +<%= @analytics_data[:new_customers_this_period] %> this period
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Active Customers</p>
          <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:active_customers] %></p>
          <p class="text-xs text-gray-600">
            <%= number_with_precision((@analytics_data[:active_customers].to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>% of total
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zM14 6a2 2 0 012 2v4a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2h8zM6 10a2 2 0 100 4 2 2 0 000-4z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Revenue</p>
          <p class="text-2xl font-bold text-gray-900">$<%= number_with_delimiter(@analytics_data[:total_customer_revenue]) %></p>
          <p class="text-xs text-gray-600">
            Growth: <%= @analytics_data[:growth_rate] %>%
          </p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Avg Deliveries</p>
          <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:avg_deliveries_per_customer] %></p>
          <p class="text-xs text-gray-600">per customer</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Customer Status Distribution -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Customer Status Distribution</h3>
      <div class="space-y-3">
        <% @analytics_data[:customers_by_status].each do |status, count| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3 
                <%= case status
                    when 'active' then 'bg-green-500'
                    when 'pending_approval' then 'bg-yellow-500'
                    when 'suspended' then 'bg-red-500'
                    when 'inactive' then 'bg-gray-500'
                    else 'bg-gray-300'
                    end %>"></div>
              <span class="text-sm text-gray-700"><%= status.humanize %></span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium text-gray-900"><%= count %></span>
              <span class="text-xs text-gray-500">
                (<%= number_with_precision((count.to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>%)
              </span>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="h-2 rounded-full 
              <%= case status
                  when 'active' then 'bg-green-500'
                  when 'pending_approval' then 'bg-yellow-500'
                  when 'suspended' then 'bg-red-500'
                  when 'inactive' then 'bg-gray-500'
                  else 'bg-gray-300'
                  end %>"
                 style="width: <%= (count.to_f / @analytics_data[:total_customers]) * 100 %>%"></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Business Type Distribution -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Business Types</h3>
      <div class="space-y-3">
        <% @analytics_data[:customers_by_type].sort_by { |_, count| -count }.first(8).each_with_index do |(type, count), index| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3" style="background-color: hsl(<%= (index * 45) % 360 %>, 70%, 60%)"></div>
              <span class="text-sm text-gray-700"><%= type&.humanize || 'Unknown' %></span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium text-gray-900"><%= count %></span>
              <span class="text-xs text-gray-500">
                (<%= number_with_precision((count.to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>%)
              </span>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="h-2 rounded-full" 
                 style="width: <%= (count.to_f / @analytics_data[:total_customers]) * 100 %>%; background-color: hsl(<%= (index * 45) % 360 %>, 70%, 60%)"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Monthly Trends -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Revenue Trend -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Monthly Revenue</h3>
      <div class="h-64 flex items-end space-x-2">
        <% if @analytics_data[:revenue_by_month].any? %>
          <% max_revenue = @analytics_data[:revenue_by_month].values.max %>
          <% @analytics_data[:revenue_by_month].each do |date, revenue| %>
            <div class="flex-1 flex flex-col items-center">
              <div class="bg-green-500 rounded-t" 
                   style="height: <%= (revenue / max_revenue * 200).to_i %>px; min-height: 4px;"
                   title="$<%= number_with_delimiter(revenue) %>"></div>
              <span class="text-xs text-gray-500 mt-2 transform rotate-45"><%= Date.parse(date.to_s).strftime('%b') rescue date.to_s[0..2] %></span>
            </div>
          <% end %>
        <% else %>
          <div class="flex-1 flex items-center justify-center h-32 text-gray-500">
            No revenue data available
          </div>
        <% end %>
      </div>
    </div>

    <!-- Customer Signups -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Monthly Signups</h3>
      <div class="h-64 flex items-end space-x-2">
        <% if @analytics_data[:new_customers_by_month].any? %>
          <% max_signups = @analytics_data[:new_customers_by_month].values.max %>
          <% @analytics_data[:new_customers_by_month].each do |date, count| %>
            <div class="flex-1 flex flex-col items-center">
              <div class="bg-blue-500 rounded-t" 
                   style="height: <%= (count / max_signups * 200).to_i %>px; min-height: 4px;"
                   title="<%= count %> customers"></div>
              <span class="text-xs text-gray-500 mt-2 transform rotate-45"><%= Date.parse(date.to_s).strftime('%b') rescue date.to_s[0..2] %></span>
            </div>
          <% end %>
        <% else %>
          <div class="flex-1 flex items-center justify-center h-32 text-gray-500">
            No signup data available
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Fleet Provider Breakdown (System Admin Only) -->
  <% if system_admin? && @analytics_data[:customers_by_fleet] %>
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Customers by Fleet Provider</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @analytics_data[:customers_by_fleet].each do |fleet_name, count| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <h4 class="text-sm font-medium text-gray-900 mb-2"><%= fleet_name %></h4>
              <div class="flex items-center justify-between">
                <span class="text-2xl font-bold text-gray-900"><%= count %></span>
                <span class="text-sm text-gray-600">
                  <%= number_with_precision((count.to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>%
                </span>
              </div>
              <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full" 
                     style="width: <%= (count.to_f / @analytics_data[:total_customers]) * 100 %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Performance Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Pending Approvals</p>
          <p class="text-2xl font-bold text-yellow-600"><%= @analytics_data[:pending_approval] %></p>
          <% if @analytics_data[:pending_approval] > 0 %>
            <%= link_to "Review Now", admin_customers_path(status: 'pending_approval'), class: "text-xs text-yellow-600 hover:text-yellow-800 underline" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">High Volume</p>
          <p class="text-2xl font-bold text-purple-600"><%= @analytics_data[:high_volume_customers] %></p>
          <p class="text-xs text-gray-600">100+ deliveries</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Top Rated</p>
          <p class="text-2xl font-bold text-indigo-600"><%= @analytics_data[:top_rated_customers] %></p>
          <p class="text-xs text-gray-600">4.0+ rating</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-pink-500 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Avg Rating</p>
          <p class="text-2xl font-bold text-pink-600"><%= @analytics_data[:avg_customer_rating] %></p>
          <p class="text-xs text-gray-600">out of 5.0</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Items -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
    <h3 class="text-lg font-medium text-blue-900 mb-4">Action Items</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% if @analytics_data[:pending_approval] > 0 %>
        <div class="bg-white rounded-lg p-4 border border-blue-200">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Pending Reviews</h4>
          <p class="text-sm text-gray-600 mb-3"><%= @analytics_data[:pending_approval] %> customers waiting for approval</p>
          <%= link_to "Review Applications", admin_customers_path(status: 'pending_approval'), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
        </div>
      <% end %>
      
      <% if @analytics_data[:suspended_customers] > 0 %>
        <div class="bg-white rounded-lg p-4 border border-blue-200">
          <h4 class="text-sm font-medium text-gray-900 mb-2">Suspended Accounts</h4>
          <p class="text-sm text-gray-600 mb-3"><%= @analytics_data[:suspended_customers] %> customers suspended</p>
          <%= link_to "Review Suspended", admin_customers_path(status: 'suspended'), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200" %>
        </div>
      <% end %>

      <div class="bg-white rounded-lg p-4 border border-blue-200">
        <h4 class="text-sm font-medium text-gray-900 mb-2">Growth Opportunity</h4>
        <p class="text-sm text-gray-600 mb-3">Focus on high-value customers</p>
        <%= link_to "View High Volume", admin_customers_path(sort_by: 'total_deliveries_count', sort_direction: 'desc'), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200" %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Date range selector
  const dateRangeSelect = document.getElementById('date-range-select');
  if (dateRangeSelect) {
    dateRangeSelect.addEventListener('change', function() {
      const currentUrl = new URL(window.location);
      currentUrl.searchParams.set('date_range', this.value);
      window.location.href = currentUrl.toString();
    });
  }

  // Add tooltips to chart bars
  document.querySelectorAll('[title]').forEach(element => {
    element.addEventListener('mouseenter', function() {
      // Simple tooltip implementation
      const tooltip = document.createElement('div');
      tooltip.className = 'fixed bg-gray-800 text-white px-2 py-1 rounded text-xs z-50';
      tooltip.textContent = this.getAttribute('title');
      document.body.appendChild(tooltip);
      
      const rect = this.getBoundingClientRect();
      tooltip.style.left = (rect.left + rect.width / 2 - tooltip.offsetWidth / 2) + 'px';
      tooltip.style.top = (rect.top - tooltip.offsetHeight - 5) + 'px';
      
      this._tooltip = tooltip;
    });
    
    element.addEventListener('mouseleave', function() {
      if (this._tooltip) {
        document.body.removeChild(this._tooltip);
        this._tooltip = null;
      }
    });
  });
});
</script>