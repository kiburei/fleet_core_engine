<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Delivery Analytics</h1>
    <p class="text-gray-600">Comprehensive insights into your delivery operations</p>
  </div>

  <!-- Date Range Filter -->
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <%= form_with url: analytics_admin_delivery_requests_path, method: :get, local: true, class: "flex items-center space-x-4" do |f| %>
      <div>
        <%= f.label :date_range, "Date Range:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :date_range, 
            options_for_select([
              ['Last 7 days', '7'],
              ['Last 14 days', '14'],
              ['Last 30 days', '30'],
              ['Last 90 days', '90']
            ], @date_range),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2" } %>
      </div>
      <div class="pt-6">
        <%= f.submit "Update", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md" %>
      </div>
    <% end %>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Total Deliveries</p>
          <p class="text-2xl font-bold text-gray-900"><%= @analytics_data[:total_deliveries] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Completed</p>
          <p class="text-2xl font-bold text-green-600"><%= @analytics_data[:completed_deliveries] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Cancelled</p>
          <p class="text-2xl font-bold text-red-600"><%= @analytics_data[:cancelled_deliveries] %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Active</p>
          <p class="text-2xl font-bold text-yellow-600"><%= @analytics_data[:active_deliveries] %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Delivery Statistics -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Performance Metrics</h2>
      
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Total Revenue</span>
          <span class="text-lg font-semibold text-gray-900">$<%= @analytics_data[:total_revenue] || 0 %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Driver Earnings</span>
          <span class="text-lg font-semibold text-gray-900">$<%= @analytics_data[:driver_earnings] || 0 %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Average Delivery Time</span>
          <span class="text-lg font-semibold text-gray-900"><%= @analytics_data[:average_delivery_time] || 0 %> min</span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Completion Rate</span>
          <% completion_rate = @analytics_data[:total_deliveries] > 0 ? 
             ((@analytics_data[:completed_deliveries].to_f / @analytics_data[:total_deliveries]) * 100).round(1) : 0 %>
          <span class="text-lg font-semibold text-green-600"><%= completion_rate %>%</span>
        </div>
      </div>
    </div>

    <!-- Top Performing Drivers -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Top Performing Drivers</h2>
      
      <div class="space-y-3">
        <% @analytics_data[:top_drivers]&.each do |driver| %>
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900"><%= driver.full_name %></p>
              <p class="text-xs text-gray-500">Rating: <%= driver.delivery_rating.round(1) %>⭐</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-semibold text-gray-900"><%= driver.respond_to?(:delivery_count) ? driver.delivery_count : driver.total_deliveries %> deliveries</p>
            </div>
          </div>
        <% end %>
        
        <% if @analytics_data[:top_drivers]&.empty? %>
          <p class="text-sm text-gray-500">No driver data available for this period</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Charts Section -->
  <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Deliveries by Day -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Deliveries by Day</h2>
      
      <div class="space-y-2">
        <% @analytics_data[:deliveries_by_day]&.each do |date, count| %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600"><%= Date.parse(date.to_s).strftime("%b %d, %Y") %></span>
            <span class="text-sm font-medium text-gray-900"><%= count %></span>
          </div>
        <% end %>
        
        <% if @analytics_data[:deliveries_by_day]&.empty? %>
          <p class="text-sm text-gray-500">No delivery data available for this period</p>
        <% end %>
      </div>
    </div>

    <!-- Deliveries by Status -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Deliveries by Status</h2>
      
      <div class="space-y-2">
        <% @analytics_data[:deliveries_by_status]&.each do |status, count| %>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600"><%= status.humanize %></span>
            <span class="text-sm font-medium text-gray-900"><%= count %></span>
          </div>
        <% end %>
        
        <% if @analytics_data[:deliveries_by_status]&.empty? %>
          <p class="text-sm text-gray-500">No status data available for this period</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8">
    <%= link_to "← Back to Deliveries", admin_delivery_requests_path, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>