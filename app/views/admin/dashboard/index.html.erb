<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Delivery Management Dashboard</h1>
    <p class="text-gray-600">Monitor and manage your delivery operations</p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M8 11v4a2 2 0 002 2h4a2 2 0 002-2v-4m-6 0h4"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Pending Deliveries</p>
          <p class="text-2xl font-bold text-gray-900"><%= pending_deliveries_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Available Drivers</p>
          <p class="text-2xl font-bold text-gray-900"><%= available_drivers_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Today's Deliveries</p>
          <p class="text-2xl font-bold text-gray-900"><%= today_deliveries_count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-500 truncate">Completion Rate</p>
          <p class="text-2xl font-bold text-gray-900"><%= completion_rate %>%</p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Deliveries -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">Recent Delivery Requests</h2>
          <%= link_to "View All", admin_delivery_requests_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
        </div>
      </div>
      
      <div class="divide-y divide-gray-200">
        <% @recent_deliveries.each do |delivery| %>
          <div class="p-6 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-2">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    #<%= delivery.id %>
                  </p>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(delivery.status) %>">
                    <%= delivery.status.humanize %>
                  </span>
                  <% if delivery.priority != 'normal' %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= priority_badge_class(delivery.priority) %>">
                      <%= delivery.priority.humanize %>
                    </span>
                  <% end %>
                </div>
                <div class="mt-1">
                  <p class="text-sm text-gray-500">
                    <%= truncate_address(delivery.pickup_address, 30) %> â†’ <%= truncate_address(delivery.delivery_address, 30) %>
                  </p>
                </div>
                <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                  <span><%= format_currency(delivery.delivery_fee) %></span>
                  <% if delivery.driver %>
                    <span>Driver: <%= delivery.driver.full_name %></span>
                  <% else %>
                    <span class="text-yellow-600">Unassigned</span>
                  <% end %>
                  <span><%= time_ago_in_words(delivery.created_at) %> ago</span>
                </div>
              </div>
              <div class="flex-shrink-0 ml-4">
                <%= link_to "View", admin_delivery_request_path(delivery), class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
        
        <% if @recent_deliveries.empty? %>
          <div class="p-6 text-center">
            <p class="text-gray-500">No recent deliveries found</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Driver Status -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">Driver Status Overview</h2>
          <%= link_to "Manage Drivers", admin_drivers_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
        </div>
      </div>
      
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Online & Available</span>
            </div>
            <span class="text-sm text-gray-900"><%= available_drivers_count %></span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Busy (On Delivery)</span>
            </div>
            <span class="text-sm text-gray-900"><%= busy_drivers_count %></span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-gray-400 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Offline</span>
            </div>
            <span class="text-sm text-gray-900"><%= Driver.offline.count %></span>
          </div>
        </div>
        
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Recently Active Drivers</h3>
          <div class="space-y-3">
            <% @active_drivers.each do |driver| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-2 h-2 <%= driver_status_class(driver.status).include?('green') ? 'bg-green-500' : driver_status_class(driver.status).include?('yellow') ? 'bg-yellow-500' : 'bg-gray-400' %> rounded-full mr-3"></div>
                  <span class="text-sm text-gray-900"><%= driver.full_name %></span>
                </div>
                <div class="text-xs text-gray-500">
                  <% if driver.current_delivery_request %>
                    On delivery
                  <% elsif driver.last_location_update %>
                    <%= time_ago_in_words(driver.last_location_update) %> ago
                  <% else %>
                    No updates
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <% if @active_drivers.empty? %>
              <p class="text-sm text-gray-500">No active drivers</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white rounded-lg shadow p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to new_admin_delivery_request_path, class: "flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Create New Delivery
      <% end %>
      
      <%= link_to new_admin_driver_path, class: "flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
        </svg>
        Add New Driver
      <% end %>
      
      <%= link_to admin_delivery_requests_path(status: 'pending'), class: "flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        View Pending Deliveries
      <% end %>
    </div>
  </div>

  <!-- Fleet Provider Performance (if multiple providers) -->
  <% if @fleet_providers.count > 1 %>
    <div class="mt-8 bg-white rounded-lg shadow">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Fleet Provider Performance</h2>
      </div>
      
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @fleet_providers.each do |provider| %>
            <div class="border rounded-lg p-4">
              <h3 class="text-sm font-medium text-gray-900 mb-3"><%= provider.name %></h3>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-500">Available Drivers:</span>
                  <span class="font-medium"><%= available_drivers_count(provider) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Today's Deliveries:</span>
                  <span class="font-medium"><%= today_deliveries_count(provider) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Completion Rate:</span>
                  <span class="font-medium"><%= completion_rate(provider) %>%</span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>