<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Driver Details" } do %>
  <div class="flex flex-wrap gap-4 mt-6">
    <%= link_to "Edit Driver", edit_admin_driver_path(@driver), class: "btn btn-primary" %>
    <%= link_to "Back to Drivers", admin_drivers_path, class: "btn btn-secondary" %>
    <% if @driver.status != 'active' %>
      <%= link_to "Activate Driver", admin_driver_path(@driver), method: :patch, 
          data: { confirm: "Activate this driver?" }, 
          class: "btn btn-success" %>
    <% end %>
    <%= button_to "Delete Driver", admin_driver_path(@driver), method: :delete, 
        data: { confirm: "Are you sure? This action cannot be undone." }, 
        class: "btn btn-danger" %>
  </div>
  <% end %>
<% end%>

<p style="color: green"><%= notice %></p>

<!-- Driver Credentials Section (shown when password was generated) -->
<% if params[:show_credentials] && flash[:generated_password] %>
  <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6 mx-4 sm:mx-6 lg:mx-8">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium text-green-800">Driver Account Created Successfully!</h3>
        <div class="mt-4 bg-white rounded-md p-4 border border-green-200">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Login Credentials for <%= flash[:driver_name] %></h4>
          <div class="space-y-3">
            <div>
              <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Email</label>
              <div class="mt-1 flex items-center space-x-2">
                <code class="bg-gray-100 px-2 py-1 rounded text-sm font-mono"><%= flash[:driver_email] %></code>
                <button onclick="copyToClipboard('<%= flash[:driver_email] %>')" 
                        class="text-xs text-blue-600 hover:text-blue-800 focus:outline-none">
                  Copy
                </button>
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide">Password</label>
              <div class="mt-1 flex items-center space-x-2">
                <code id="password-field" class="bg-yellow-100 px-2 py-1 rounded text-sm font-mono font-bold"><%= flash[:generated_password] %></code>
                <button onclick="copyToClipboard('<%= flash[:generated_password] %>')" 
                        class="text-xs text-blue-600 hover:text-blue-800 focus:outline-none">
                  Copy
                </button>
              </div>
            </div>
          </div>
          
          <div class="mt-4 flex flex-wrap gap-2">
            <button onclick="copyBothCredentials('<%= flash[:driver_email] %>', '<%= flash[:generated_password] %>')" 
                    class="inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
              <svg class="-ml-0.5 mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 2a1 1 0 000 2h2a1 1 0 100-2H8z"></path>
                <path d="M3 5a2 2 0 012-2 3 3 0 003 3h6a3 3 0 003-3 2 2 0 012 2v6h-4.586l1.293-1.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L14.586 13H19v3a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"></path>
              </svg>
              Copy Both Credentials
            </button>
            
            <a href="mailto:<%= flash[:driver_email] %>?subject=Your Driver Account Credentials&body=Hi <%= flash[:driver_name] %>,%0A%0AYour driver account has been created. Here are your login credentials:%0A%0AEmail: <%= flash[:driver_email] %>%0APassword: <%= flash[:generated_password] %>%0A%0APlease keep these credentials secure and change your password after your first login.%0A%0AThanks!" 
               class="inline-flex items-center px-3 py-2 border border-blue-300 shadow-sm text-xs font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              <svg class="-ml-0.5 mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
              Share via Email
            </a>
            
            <a href="sms:+<%= @driver.phone_number&.gsub(/[^0-9]/, '') %>?body=Hi <%= flash[:driver_name] %>, your driver account has been created. Email: <%= flash[:driver_email] %>, Password: <%= flash[:generated_password] %>. Please keep these credentials secure." 
               class="inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-xs font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
              <svg class="-ml-0.5 mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              Share via SMS
            </a>
          </div>
          
          <div class="mt-3 text-xs text-gray-600">
            <p><strong>Important:</strong> Please save these credentials securely and share them with the driver. The password will not be shown again for security reasons.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="pt-4 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Driver Overview Card -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <div class="flex items-center space-x-4 mb-6">
        <%= image_tag demo_avatar_url(id: @driver.id, variant: @driver.full_name), 
            alt: @driver.full_name, 
            class: "w-20 h-20 rounded-full" %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @driver.full_name %></h1>
          <p class="text-gray-600">Driver ID: #<%= @driver.id %></p>
          <div class="flex items-center mt-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
              <%= @driver.is_online ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @driver.is_online ? 'Online' : 'Offline' %>
            </span>
            <% if @driver.is_available_for_delivery %>
              <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                Available for Delivery
              </span>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-primary-600"><%= @driver.total_deliveries || 0 %></div>
          <div class="text-sm text-gray-500">Total Deliveries</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600"><%= @driver.delivery_rating ? @driver.delivery_rating.round(1) : 'N/A' %></div>
          <div class="text-sm text-gray-500">Rating</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600">
            <%= @driver.respond_to?(:active_delivery_requests) ? (@driver.active_delivery_requests&.count || 0) : 0 %>
          </div>
          <div class="text-sm text-gray-500">Active Deliveries</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600">
            $<%= @driver.respond_to?(:total_earnings) ? ((@driver.total_earnings || 0).round(2)) : '0.00' %>
          </div>
          <div class="text-sm text-gray-500">Total Earnings</div>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Personal Information -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Personal Information</h2>
        
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-500">Full Name</label>
            <p class="mt-1 text-sm text-gray-900"><%= @driver.full_name %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-500">Email</label>
            <p class="mt-1 text-sm text-gray-900">
              <a href="mailto:<%= @driver.user.email %>" class="text-primary-600 hover:text-primary-800">
                <%= @driver.user.email %>
              </a>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-500">Phone Number</label>
            <p class="mt-1 text-sm text-gray-900">
              <a href="tel:<%= @driver.phone_number %>" class="text-primary-600 hover:text-primary-800">
                <%= @driver.phone_number %>
              </a>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-500">License Number</label>
            <p class="mt-1 text-sm text-gray-900"><%= @driver.license_number %></p>
          </div>
        </div>
      </div>
      
      <!-- Fleet & Vehicle Information -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Fleet & Vehicle</h2>
        
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-500">Fleet Provider</label>
            <p class="mt-1 text-sm text-gray-900">
              <%= link_to @driver.fleet_provider.name, fleet_provider_path(@driver.fleet_provider), 
                  class: "text-primary-600 hover:text-primary-800" %>
            </p>
          </div>
          
          <% if @driver.vehicle %>
            <div>
              <label class="block text-sm font-medium text-gray-500">Assigned Vehicle</label>
              <div class="mt-1">
                <p class="text-sm font-medium text-gray-900"><%= @driver.vehicle.registration_number %></p>
                <p class="text-xs text-gray-500">
                  <%= @driver.vehicle.vehicle_model&.make %> 
                  <%= @driver.vehicle.vehicle_model&.model %> 
                  (<%= @driver.vehicle.year %>)
                </p>
              </div>
            </div>
          <% else %>
            <div>
              <label class="block text-sm font-medium text-gray-500">Assigned Vehicle</label>
              <p class="mt-1 text-sm text-gray-500 italic">No vehicle assigned</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Delivery Service Status -->
    <% if @driver.fleet_provider&.is_delivery_enabled %>
      <div class="mt-6 bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Delivery Service Status</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-500">Delivery Status</label>
            <div class="mt-1 flex items-center space-x-2">
              <% if @driver.is_online && @driver.is_available_for_delivery %>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-sm text-green-600 font-medium">Available for Delivery</span>
              <% elsif @driver.is_online %>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <span class="text-sm text-yellow-600 font-medium">Online but Busy</span>
              <% else %>
                <div class="w-3 h-3 bg-gray-400 rounded-full"></div>
                <span class="text-sm text-gray-500">Offline</span>
              <% end %>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-500">Current Location</label>
            <div class="mt-1">
              <% if @driver.current_latitude && @driver.current_longitude %>
                <p class="text-xs text-gray-600 mb-2">
                  Lat: <%= @driver.current_latitude.round(6) %>, 
                  Lng: <%= @driver.current_longitude.round(6) %>
                </p>
                <!-- Embedded Google Map -->
                <iframe
                  width="100%"
                  height="300"
                  style="border:0"
                  loading="lazy"
                  allowfullscreen
                  referrerpolicy="no-referrer-when-downgrade"
                  src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAPS_API_KEY'] || 'YOUR_API_KEY' %>&q=<%= @driver.current_latitude %>,<%= @driver.current_longitude %>&zoom=15"
                  class="w-full rounded-lg mb-2">
                </iframe>
                <a href="https://www.google.com/maps?q=<%= @driver.current_latitude %>,<%= @driver.current_longitude %>" 
                   target="_blank" 
                   class="text-xs text-primary-600 hover:text-primary-800">
                  Open in Google Maps →
                </a>
              <% else %>
                <p class="text-sm text-gray-500">Location not available</p>
              <% end %>
            </div>
          </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-500">Last Update</label>
            <p class="mt-1 text-sm text-gray-600">
              <%= @driver.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    
    <!-- Action Buttons -->
    <div class="mt-6 flex justify-end space-x-3">
      <%= link_to "View All Deliveries", admin_delivery_requests_path(driver_id: @driver.id), 
          class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= link_to "Driver Performance", admin_driver_path(@driver, format: :analytics), 
          class: "bg-primary-600 hover:bg-primary-700 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white" %>
    </div>
  </div>
</div>

<script>
  function copyToClipboard(text) {
    // Create a temporary textarea element
    const textarea = document.createElement('textarea');
    textarea.value = text;
    document.body.appendChild(textarea);
    
    // Select and copy the text
    textarea.select();
    document.execCommand('copy');
    
    // Remove the temporary element
    document.body.removeChild(textarea);
    
    // Show feedback
    showCopyFeedback();
  }
  
  function copyBothCredentials(email, password) {
    const credentials = `Email: ${email}\nPassword: ${password}`;
    copyToClipboard(credentials);
  }
  
  function showCopyFeedback() {
    // Create or update feedback message
    let feedback = document.getElementById('copy-feedback');
    if (!feedback) {
      feedback = document.createElement('div');
      feedback.id = 'copy-feedback';
      feedback.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded-md shadow-lg z-50';
      document.body.appendChild(feedback);
    }
    
    feedback.textContent = 'Copied to clipboard!';
    feedback.style.display = 'block';
    
    // Hide after 2 seconds
    setTimeout(() => {
      feedback.style.display = 'none';
    }, 2000);
  }
</script>
