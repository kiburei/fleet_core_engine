<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900">Drivers Management</h1>
    <p class="text-gray-600">Manage and monitor your delivery drivers</p>
  </div>
  <%= link_to "Add New Driver", new_admin_driver_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg inline-flex items-center" %>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-2 bg-blue-100 rounded-lg">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Total Drivers</p>
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_drivers] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-2 bg-green-100 rounded-lg">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Online</p>
        <p class="text-2xl font-bold text-green-600"><%= @stats[:online_drivers] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-2 bg-blue-100 rounded-lg">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">Available</p>
        <p class="text-2xl font-bold text-blue-600"><%= @stats[:available_drivers] %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="p-2 bg-orange-100 rounded-lg">
        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-600">On Delivery</p>
        <p class="text-2xl font-bold text-orange-600"><%= @stats[:busy_drivers] %></p>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow mb-6 p-4">
  <%= form_with url: admin_drivers_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |f| %>
    <div>
      <%= f.select :fleet_provider_id, 
          options_from_collection_for_select(@fleet_providers, :id, :name, params[:fleet_provider_id]),
          { prompt: "All Fleet Providers" },
          { class: "border border-gray-300 rounded-md px-3 py-2" } %>
    </div>
    
    <div>
      <%= f.select :status,
          options_for_select([
            ['All Statuses', ''],
            ['Online', 'online'],
            ['Available', 'available'],
            ['On Delivery', 'busy']
          ], params[:status]),
          {},
          { class: "border border-gray-300 rounded-md px-3 py-2" } %>
    </div>
    
    <div>
      <%= f.submit "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md" %>
    </div>
    
    <% if !params.except(:controller, :action).empty? %>
      <%= link_to "Clear", admin_drivers_path, class: "text-gray-600 hover:text-gray-800" %>
    <% end %>
  <% end %>
</div>

<!-- Drivers Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Driver</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fleet Provider</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Performance</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @drivers.each do |driver| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <% if driver.profile_picture.attached? %>
                  <%= image_tag driver.profile_picture, class: "h-10 w-10 rounded-full" %>
                <% else %>
                  <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700"><%= driver.full_name.first %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900"><%= driver.full_name %></div>
                <div class="text-sm text-gray-500">ID: <%= driver.id %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= driver.fleet_provider.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex flex-col space-y-1">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= driver.is_online? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= driver.is_online? ? 'Online' : 'Offline' %>
              </span>
              <% if driver.is_online? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= driver.is_available_for_delivery? ? 'bg-blue-100 text-blue-800' : 'bg-orange-100 text-orange-800' %>">
                  <%= driver.is_available_for_delivery? ? 'Available' : 'Busy' %>
                </span>
              <% end %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <div>
              <div>‚≠ê <%= driver.delivery_rating.round(1) %></div>
              <div class="text-xs text-gray-500"><%= driver.total_deliveries %> deliveries</div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <div>
              <div><%= driver.phone_number %></div>
              <% if driver.user %>
                <div class="text-xs text-gray-500"><%= driver.user.email %></div>
              <% end %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
            <%= link_to "View", admin_driver_path(driver), class: "text-blue-600 hover:text-blue-900" %>
            <%= link_to "Edit", edit_admin_driver_path(driver), class: "text-indigo-600 hover:text-indigo-900" %>
            
            <% if driver.is_online? %>
              <%= link_to "Set Offline", admin_driver_path(driver, action_type: 'online'), 
                  method: :patch, class: "text-red-600 hover:text-red-900" %>
            <% else %>
              <%= link_to "Set Online", admin_driver_path(driver, action_type: 'online'), 
                  method: :patch, class: "text-green-600 hover:text-green-900" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @drivers.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No drivers found</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by adding a new driver to your fleet.</p>
      <div class="mt-6">
        <%= link_to "Add New Driver", new_admin_driver_path, 
            class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if @drivers.respond_to?(:current_page) %>
  <div class="mt-6 flex justify-center">
    <%= paginate @drivers, theme: 'tailwind' %>
  </div>
<% end %>