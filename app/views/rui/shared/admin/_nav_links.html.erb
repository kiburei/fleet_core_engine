<div class="hidden md:flex md:items-center md:gap-x-8">
  <%= nav_link_to "Dashboard", root_path, class: "rui-nav-link--admin" %>
  <%= nav_link_to "Fleet Providers", fleet_providers_path, class: "rui-nav-link--admin" %>
  <%= nav_link_to "Vehicles", vehicles_path, class: "rui-nav-link--admin" %>
  <%= nav_link_to "Drivers", drivers_path, class: "rui-nav-link--admin" %>
  <%= nav_link_to "Trips", trips_path, class: "rui-nav-link--admin" %>
  <%= nav_link_to "Maintenance", maintenances_path, class: "rui-nav-link--admin" %>
