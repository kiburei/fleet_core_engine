<!DOCTYPE html>
<html>
  <head>
    <title>Fleet Management Admin - <%= @title || "Dashboard" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100">
    <div class="min-h-screen">
      <!-- Navigation -->
      <nav class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex items-center">
              <!-- Logo/Brand -->
              <div class="flex-shrink-0">
                <%= link_to admin_root_path, class: "flex items-center" do %>
                  <svg class="w-8 h-8 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                  <span class="text-xl font-bold text-gray-900">Fleet Admin</span>
                <% end %>
              </div>
              
              <!-- Main Navigation -->
              <div class="hidden md:ml-10 md:flex md:space-x-8">
                <%= link_to "Dashboard", admin_root_path, 
                    class: "px-3 py-2 rounded-md text-sm font-medium #{request.path == admin_root_path ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600'}" %>
                
                <%= link_to "Deliveries", admin_delivery_requests_path, 
                    class: "px-3 py-2 rounded-md text-sm font-medium #{controller_name == 'delivery_requests' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600'}" %>
                
                <%= link_to "Drivers", admin_drivers_path, 
                    class: "px-3 py-2 rounded-md text-sm font-medium #{controller_name == 'drivers' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-blue-600'}" %>
              </div>
            </div>
            
            <!-- User Menu -->
            <div class="flex items-center space-x-4">
              <% if user_signed_in? %>
                <div class="flex items-center space-x-3">
                  <span class="text-sm text-gray-700">Welcome, <%= current_user.first_name || current_user.email %></span>
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete,
                      class: "bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-md text-sm font-medium" %>
                </div>
              <% else %>
                <%= link_to "Sign In", new_user_session_path,
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-md text-sm font-medium" %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Flash Messages -->
          <% flash.each do |type, message| %>
            <div class="mb-4 rounded-md p-4 <%= flash_class(type) %>">
              <div class="flex">
                <div class="ml-3">
                  <p class="text-sm font-medium">
                    <%= message %>
                  </p>
                </div>
                <div class="ml-auto pl-3">
                  <div class="-mx-1.5 -my-1.5">
                    <button type="button" class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                      <span class="sr-only">Dismiss</span>
                      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Page Content -->
          <%= yield %>
        </div>
      </main>
    </div>

    <!-- Page-specific styles -->
    <%= yield :page_specific_styles %>
  </body>
</html>