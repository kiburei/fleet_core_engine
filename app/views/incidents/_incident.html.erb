<div class="max-w-4xl mx-auto p-6 bg-white dark:bg-slate-800 rounded shadow space-y-6">
  <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Incident Details</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Date</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= @incident.incident_date %></p>
    </div>

    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Vehicle</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= @incident.vehicle&.registration_number %></p>
    </div>

    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Driver</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= @incident.driver&.first_name %> <%= @incident.driver&.last_name %></p>
    </div>

    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Location</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= @incident.location %></p>
    </div>

    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Cost of Damage</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= number_to_currency(@incident.damage_cost, unit: "KES ") %></p>
    </div>

    <div class="bg-slate-100 dark:bg-slate-700 p-4 rounded">
      <p class="text-xs text-slate-500">Reference</p>
      <p class="text-base font-medium text-slate-800 dark:text-white"><%= @incident.report_reference %></p>
    </div>
  </div>

  <div class="mt-4">
    <h3 class="font-semibold text-slate-800 dark:text-white">Description</h3>
    <p class="text-slate-700 dark:text-slate-200 mt-2"><%= @incident.description %></p>
  </div>

  <div class="pt-4 flex justify-end space-x-2">
    <%= link_to "Edit", edit_incident_path(@incident), class: "btn btn-warning" %>
    <%= link_to "Back", incidents_path, class: "btn btn-secondary" %>
  </div>
</div>
