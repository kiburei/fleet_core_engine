<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Driver Management" } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Fleet Providers", fleet_providers_path, class: "btn btn-secondary" %>
      <%= link_to "Vehicles", vehicles_path, class: "btn btn-secondary" %>
      <%= link_to "Add Driver", new_driver_path, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Driver Management" %>

<!-- Stats Cards -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Driver Overview</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
            <%= icon "users", class: "size-6 text-blue-600 dark:text-blue-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Total Drivers</p>
            <p class="text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:total_drivers] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <%= icon "check-circle", class: "size-6 text-green-600 dark:text-green-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Active</p>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @stats[:active_drivers] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-orange-100 dark:bg-orange-900/30 rounded-lg">
            <%= icon "signal", class: "size-6 text-orange-600 dark:text-orange-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Online</p>
            <p class="text-2xl font-bold text-orange-600 dark:text-orange-400"><%= @stats[:online_drivers] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
            <%= icon "device-phone-mobile", class: "size-6 text-purple-600 dark:text-purple-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">App Access</p>
            <p class="text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @stats[:app_access_drivers] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-4">
      <%= form_with url: drivers_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |f| %>
        <div>
          <%= f.text_field :search, value: params[:search], placeholder: "Search drivers...", class: "form-input" %>
        </div>
        
        <div>
          <%= f.select :status,
              options_for_select([
                ['All Statuses', ''],
                ['Active', 'active'],
                ['Inactive', 'inactive'],
                ['Suspended', 'suspended']
              ], params[:status]),
              {},
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.select :fleet_provider_id,
              options_from_collection_for_select(current_user.fleet_providers, :id, :name, params[:fleet_provider_id]),
              { prompt: "All Fleet Providers" },
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.submit "Filter", class: "btn btn-primary" %>
        </div>
        
        <% if !params.except(:controller, :action).empty? %>
          <%= link_to "Clear", drivers_path, class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 dark:hover:text-slate-300" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<!-- Drivers Table -->
<div class="px-4 mb-16">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 overflow-hidden">
      <div class="max-h-[calc(100vh-400px)] overflow-y-auto">
        <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-600">
          <thead class="bg-slate-50 dark:bg-slate-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Driver</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Contact</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Fleet</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Vehicle</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">App Access</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-600">
            <% @drivers.each do |driver| %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-700 transition ease-in-out duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <%= image_tag(
                            driver.profile_picture.attached? ? url_for(driver.profile_picture) : demo_avatar_url(id: driver.id, variant: driver.full_name),
                            alt: driver.full_name,
                            class: "h-10 w-10 rounded-full object-cover"
                          ) %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-slate-900 dark:text-white">
                        <%= link_to driver.full_name, driver_path(driver), class: "hover:text-primary-600 dark:hover:text-primary-400" %>
                      </div>
                      <div class="text-sm text-slate-500 dark:text-slate-400">License: <%= driver.license_number %></div>
                    </div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white"><%= driver.phone_number %></div>
                    <% if driver.has_user_account? %>
                      <div class="text-sm text-slate-500 dark:text-slate-400"><%= driver.user.email %></div>
                    <% else %>
                      <div class="text-sm text-slate-400 dark:text-slate-500">No email</div>
                    <% end %>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-slate-900 dark:text-white">
                    <%= link_to driver.fleet_provider.name, fleet_provider_path(driver.fleet_provider), class: "hover:text-primary-600 dark:hover:text-primary-400" %>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if driver.vehicle %>
                    <div class="text-sm font-medium text-slate-900 dark:text-white">
                      <%= link_to driver.vehicle.registration_number, vehicle_path(driver.vehicle), class: "hover:text-primary-600 dark:hover:text-primary-400" %>
                    </div>
                    <div class="text-sm text-slate-500 dark:text-slate-400"><%= driver.vehicle.vehicle_model.name if driver.vehicle.vehicle_model %></div>
                  <% else %>
                    <div class="text-sm text-slate-500 dark:text-slate-400">Not Assigned</div>
                  <% end %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="space-y-1">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= case driver.license_status
                          when 'active' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                          when 'inactive' then 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                          when 'suspended' then 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                          else 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                          end %>">
                      <%= driver.license_status&.humanize || 'Unknown' %>
                    </span>
                    
                    <% if driver.fleet_provider&.is_delivery_enabled %>
                      <div class="flex items-center space-x-1">
                        <% if driver.is_online && driver.is_available_for_delivery %>
                          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                          <span class="text-xs text-green-600 dark:text-green-400">Available</span>
                        <% elsif driver.is_online %>
                          <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                          <span class="text-xs text-yellow-600 dark:text-yellow-400">Busy</span>
                        <% else %>
                          <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
                          <span class="text-xs text-gray-500">Offline</span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-1">
                    <% if driver.has_user_account? %>
                      <% if driver.user.has_role?(:fleet_provider_driver) %>
                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                        <span class="text-xs text-blue-600 dark:text-blue-400">Active</span>
                      <% else %>
                        <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                        <span class="text-xs text-orange-600 dark:text-orange-400">Inactive</span>
                      <% end %>
                    <% else %>
                      <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
                      <span class="text-xs text-gray-500">No Account</span>
                    <% end %>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", driver_path(driver), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                  <%= link_to "Edit", edit_driver_path(driver), class: "text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300" %>
                  
                  <% unless driver.has_user_account? %>
                    <%= link_to "Create Account", create_user_account_driver_path(driver), method: :post,
                        confirm: "Create user account for #{driver.full_name}?", 
                        class: "text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @drivers.empty? %>
          <div class="text-center py-12">
            <%= icon "users", class: "mx-auto size-12 text-slate-400 dark:text-slate-500" %>
            <h3 class="mt-2 text-sm font-medium text-slate-900 dark:text-white">No drivers found</h3>
            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">Get started by adding your first driver.</p>
            <div class="mt-6">
              <%= link_to "Add Driver", new_driver_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= render 'shared/pagination_controls', collection: @drivers %>
  </div>
</div>
