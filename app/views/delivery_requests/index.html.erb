<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Deliveries" } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Analytics", analytics_delivery_requests_path, class: "btn btn-secondary" %>
      <%= link_to "Manage Customers", customers_path, class: "btn btn-secondary" %>
      <%= link_to "Create Delivery", new_delivery_request_path, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Deliveries" %>

<!-- Stats Cards -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Deliveries Overview</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
            <%= icon "clipboard-document-list", class: "size-6 text-blue-600 dark:text-blue-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Total Deliveries</p>
            <p class="text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:total_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
            <%= icon "clock", class: "size-6 text-yellow-600 dark:text-yellow-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Pending</p>
            <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @stats[:pending_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-orange-100 dark:bg-orange-900/30 rounded-lg">
            <%= icon "bolt", class: "size-6 text-orange-600 dark:text-orange-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Active</p>
            <p class="text-2xl font-bold text-orange-600 dark:text-orange-400"><%= @stats[:active_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <%= icon "check-circle", class: "size-6 text-green-600 dark:text-green-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Completed Today</p>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @stats[:completed_today] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-4">
      <%= form_with url: delivery_requests_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |f| %>
        <div>
          <%= f.select :status,
              options_for_select([
                ['All Statuses', ''],
                ['Pending', 'pending'],
                ['Assigned', 'assigned'],
                ['Picked Up', 'picked_up'],
                ['In Transit', 'in_transit'],
                ['Delivered', 'delivered'],
                ['Cancelled', 'cancelled']
              ], params[:status]),
              {},
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.select :fleet_provider_id, 
              options_from_collection_for_select(@fleet_providers, :id, :name, params[:fleet_provider_id]),
              { prompt: "All Fleet Providers" },
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.select :driver_id,
              options_from_collection_for_select(@drivers, :id, :full_name, params[:driver_id]),
              { prompt: "All Drivers" },
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.date_field :date_from, value: params[:date_from], placeholder: "From date", class: "form-input" %>
        </div>
        
        <div>
          <%= f.date_field :date_to, value: params[:date_to], placeholder: "To date", class: "form-input" %>
        </div>
        
        <div>
          <%= f.submit "Filter", class: "btn btn-primary" %>
        </div>
        
        <% if !params.except(:controller, :action).empty? %>
          <%= link_to "Clear", delivery_requests_path, class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 dark:hover:text-slate-300" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<!-- Bulk Actions -->
<div class="px-4 mb-4">
  <div class="container mx-auto">
    <%= form_with url: bulk_actions_delivery_requests_path, method: :post, local: true, id: "bulk-form" do |f| %>
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Bulk Actions:</span>
            <%= f.select :bulk_action,
                options_for_select([
                  ['Select Action', ''],
                  ['Auto Dispatch', 'auto_dispatch'],
                  ['Cancel Selected', 'cancel'],
                  ['Change Fleet Provider', 'change_fleet']
                ]),
                {},
                { class: "form-select" } %>
            
            <div id="additional-fields" style="display: none;">
              <%= f.select :new_fleet_provider_id,
                  options_from_collection_for_select(@fleet_providers, :id, :name),
                  { prompt: "Select Fleet Provider" },
                  { class: "form-select", id: "fleet-select" } %>
              <%= f.text_field :cancellation_reason, placeholder: "Cancellation reason", class: "form-input", id: "reason-field" %>
            </div>
            
            <%= f.submit "Apply", class: "btn btn-primary", disabled: true, id: "bulk-submit" %>
          </div>
          <div>
            <span class="text-sm text-slate-500 dark:text-slate-400">Selected: <span id="selected-count">0</span></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Deliveries Table -->
<div class="px-4 mb-16">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 overflow-hidden">
      <div class="max-h-[calc(100vh-400px)] overflow-y-auto">
        <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-600">
          <thead class="bg-slate-50 dark:bg-slate-700">
            <tr>
              <th class="px-6 py-3 text-left">
                <input type="checkbox" id="select-all" class="rounded">
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Request</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Driver</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Route</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Fee</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-600">
            <% @delivery_requests.each do |delivery| %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-700 transition ease-in-out duration-200">
                <td class="px-6 py-4">
                  <input type="checkbox" name="delivery_ids[]" value="<%= delivery.id %>" class="delivery-checkbox rounded">
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white"><%= delivery.request_number %></div>
                    <div class="text-sm text-slate-500 dark:text-slate-400">
                      <%= time_ago_in_words(delivery.requested_at) %> ago
                    </div>
                    <% if delivery.priority != 'normal' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= delivery.priority == 'urgent' ? 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' %>">
                        <%= delivery.priority.capitalize %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white"><%= delivery.business_customer&.business_name || 'No Business' %></div>
                    <div class="text-sm text-slate-500 dark:text-slate-400">Recipient: <%= delivery.end_customer_name %></div>
                    <div class="text-xs text-slate-500 dark:text-slate-400"><%= delivery.end_customer_phone %></div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if delivery.driver %>
                    <div>
                      <div class="text-sm font-medium text-slate-900 dark:text-white"><%= delivery.driver.full_name %></div>
                      <div class="text-sm text-slate-500 dark:text-slate-400"><%= delivery.driver.phone_number %></div>
                    </div>
                  <% else %>
                    <span class="text-sm text-slate-500 dark:text-slate-400">Not assigned</span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-slate-900 dark:text-white">
                    <div class="mb-1">
                      <strong>From:</strong> <%= truncate(delivery.pickup_address, length: 40) %>
                    </div>
                    <div>
                      <strong>To:</strong> <%= truncate(delivery.delivery_address, length: 40) %>
                    </div>
                    <div class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      <%= delivery.estimated_distance_km&.round(1) %>km
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    <%= case delivery.status
                        when 'pending' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400'
                        when 'assigned' then 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400'
                        when 'picked_up' then 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400'
                        when 'in_transit' then 'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-400'
                        when 'delivered' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                        when 'cancelled' then 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                        else 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                        end %>">
                    <%= delivery.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900 dark:text-white">
                  <div>
                    <div>$<%= delivery.delivery_fee %></div>
                    <% if delivery.driver_commission %>
                      <div class="text-xs text-slate-500 dark:text-slate-400">Driver: $<%= delivery.driver_commission %></div>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", delivery_request_path(delivery), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                  <% if delivery.can_be_assigned? %>
                    <%= link_to "Assign", delivery_request_path(delivery), class: "text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300" %>
                  <% end %>
                  <% if delivery.can_be_cancelled? %>
                    <%= link_to "Cancel", cancel_delivery_delivery_request_path(delivery), 
                        method: :patch, 
                        class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                        data: { confirm: "Are you sure you want to cancel this delivery?" } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @delivery_requests.empty? %>
          <div class="text-center py-12">
            <%= icon "clipboard-document-list", class: "mx-auto size-12 text-slate-400 dark:text-slate-500" %>
            <h3 class="mt-2 text-sm font-medium text-slate-900 dark:text-white">No deliveries found</h3>
            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">Get started by creating a new delivery request.</p>
            <div class="mt-6">
              <%= link_to "Create Delivery", new_delivery_request_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

    <!-- Pagination -->
    <% if @delivery_requests.respond_to?(:current_page) %>
      <div class="px-4 mt-6">
        <div class="container mx-auto flex justify-center">
          <%= paginate @delivery_requests, theme: 'tailwind' %>
        </div>
      </div>
    <% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const selectAll = document.getElementById('select-all');
  const checkboxes = document.querySelectorAll('.delivery-checkbox');
  const selectedCount = document.getElementById('selected-count');
  const bulkSubmit = document.getElementById('bulk-submit');
  const bulkAction = document.querySelector('select[name="bulk_action"]');
  const additionalFields = document.getElementById('additional-fields');
  const fleetSelect = document.getElementById('fleet-select');
  const reasonField = document.getElementById('reason-field');

  function updateSelectedCount() {
    const checked = document.querySelectorAll('.delivery-checkbox:checked').length;
    selectedCount.textContent = checked;
    bulkSubmit.disabled = checked === 0 || !bulkAction.value;
  }

  selectAll.addEventListener('change', function() {
    checkboxes.forEach(cb => cb.checked = this.checked);
    updateSelectedCount();
  });

  checkboxes.forEach(cb => {
    cb.addEventListener('change', updateSelectedCount);
  });

  bulkAction.addEventListener('change', function() {
    const action = this.value;
    additionalFields.style.display = 'none';
    fleetSelect.style.display = 'none';
    reasonField.style.display = 'none';

    if (action === 'change_fleet') {
      additionalFields.style.display = 'block';
      fleetSelect.style.display = 'block';
    } else if (action === 'cancel') {
      additionalFields.style.display = 'block';
      reasonField.style.display = 'block';
    }

    updateSelectedCount();
  });

  // Initialize
  updateSelectedCount();
});
</script>