<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Analytics" } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Back to Deliveries", delivery_requests_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Delivery Analytics" %>

<!-- Date Range Filter -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-4">
      <%= form_with url: analytics_delivery_requests_path, method: :get, local: true, class: "flex items-center space-x-4" do |f| %>
        <div>
          <%= f.label :date_range, "Date Range:", class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>
          <%= f.select :date_range, 
              options_for_select([
                ['Last 7 days', '7'],
                ['Last 14 days', '14'],
                ['Last 30 days', '30'],
                ['Last 90 days', '90']
              ], @date_range),
              {},
              { class: "form-select" } %>
        </div>
        <div class="pt-6">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Key Metrics -->
<div class="px-4 mb-8">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="p-2 bg-primary-100 dark:bg-primary-900/30 rounded-lg">
              <%= icon "clipboard-document-list", class: "size-6 text-primary-600 dark:text-primary-400" %>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Total Deliveries</p>
            <p class="text-2xl font-bold text-slate-900 dark:text-white"><%= @analytics_data[:total_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
              <%= icon "check-circle", class: "size-6 text-green-600 dark:text-green-400" %>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Completed</p>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @analytics_data[:completed_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="p-2 bg-red-100 dark:bg-red-900/30 rounded-lg">
              <%= icon "x-mark", class: "size-6 text-red-600 dark:text-red-400" %>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Cancelled</p>
            <p class="text-2xl font-bold text-red-600 dark:text-red-400"><%= @analytics_data[:cancelled_deliveries] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
              <%= icon "clock", class: "size-6 text-yellow-600 dark:text-yellow-400" %>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">Active</p>
            <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @analytics_data[:active_deliveries] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="px-4 mb-8">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Delivery Statistics -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h2 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Performance Metrics</h2>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600 dark:text-slate-400">Total Revenue</span>
            <span class="text-lg font-semibold text-slate-900 dark:text-white"><%= number_to_currency(@analytics_data[:total_revenue] || 0, unit: 'KES ') %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600 dark:text-slate-400">Driver Earnings</span>
            <span class="text-lg font-semibold text-slate-900 dark:text-white"><%= number_to_currency(@analytics_data[:driver_earnings] || 0, unit: 'KES ') %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600 dark:text-slate-400">Average Delivery Time</span>
            <span class="text-lg font-semibold text-slate-900 dark:text-white"><%= @analytics_data[:average_delivery_time] || 0 %> min</span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600 dark:text-slate-400">Completion Rate</span>
            <% completion_rate = @analytics_data[:total_deliveries] > 0 ? 
               ((@analytics_data[:completed_deliveries].to_f / @analytics_data[:total_deliveries]) * 100).round(1) : 0 %>
            <span class="text-lg font-semibold text-green-600 dark:text-green-400"><%= completion_rate %>%</span>
          </div>
        </div>
      </div>

      <!-- Top Performing Drivers -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h2 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Top Performing Drivers</h2>
        
        <div class="space-y-3">
          <% @analytics_data[:top_drivers]&.each do |driver| %>
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-slate-900 dark:text-white"><%= driver.full_name %></p>
                <p class="text-xs text-slate-500 dark:text-slate-400">Rating: <%= driver.delivery_rating.round(1) %>‚≠ê</p>
              </div>
              <div class="text-right">
                <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= driver.respond_to?(:delivery_count) ? driver.delivery_count : driver.total_deliveries %> deliveries</p>
              </div>
            </div>
          <% end %>
          
          <% if @analytics_data[:top_drivers]&.empty? %>
            <p class="text-sm text-slate-500 dark:text-slate-400">No driver data available for this period</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Charts Section -->
<div class="px-4 mb-16">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Deliveries by Day -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h2 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Deliveries by Day</h2>
        
        <div class="space-y-2">
          <% @analytics_data[:deliveries_by_day]&.each do |date, count| %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-slate-600 dark:text-slate-400"><%= Date.parse(date.to_s).strftime("%b %d, %Y") %></span>
              <span class="text-sm font-medium text-slate-900 dark:text-white"><%= count %></span>
            </div>
          <% end %>
          
          <% if @analytics_data[:deliveries_by_day]&.empty? %>
            <p class="text-sm text-slate-500 dark:text-slate-400">No delivery data available for this period</p>
          <% end %>
        </div>
      </div>

      <!-- Deliveries by Status -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h2 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Deliveries by Status</h2>
        
        <div class="space-y-2">
          <% @analytics_data[:deliveries_by_status]&.each do |status, count| %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-slate-600 dark:text-slate-400"><%= status.humanize %></span>
              <span class="text-sm font-medium text-slate-900 dark:text-white"><%= count %></span>
            </div>
          <% end %>
          
          <% if @analytics_data[:deliveries_by_status]&.empty? %>
            <p class="text-sm text-slate-500 dark:text-slate-400">No status data available for this period</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
