<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Edit Customer: #{@customer.business_name}" } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Back to Customer", customer_path(@customer), class: "btn btn-secondary" %>
      <%= link_to "All Customers", customers_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Edit Customer: #{@customer.business_name}" %>

<!-- Customer Status -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="rounded-lg p-4 border
      <%= case @customer.status
          when 'active' then 'bg-green-50 border-green-200 dark:bg-green-900/20 dark:border-green-700'
          when 'pending_approval' then 'bg-yellow-50 border-yellow-200 dark:bg-yellow-900/20 dark:border-yellow-700'
          when 'suspended' then 'bg-red-50 border-red-200 dark:bg-red-900/20 dark:border-red-700'
          when 'inactive' then 'bg-slate-50 border-slate-200 dark:bg-slate-800 dark:border-slate-600'
          else 'bg-slate-50 border-slate-200 dark:bg-slate-800 dark:border-slate-600'
          end %>">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @customer.status
                when 'active' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                when 'pending_approval' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400'
                when 'suspended' then 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                when 'inactive' then 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                else 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                end %>">
            <%= @customer.status.humanize %>
          </span>
          <span class="ml-3 text-sm font-medium
            <%= case @customer.status
                when 'active' then 'text-green-700 dark:text-green-300'
                when 'pending_approval' then 'text-yellow-700 dark:text-yellow-300'
                when 'suspended' then 'text-red-700 dark:text-red-300'
                when 'inactive' then 'text-slate-700 dark:text-slate-300'
                else 'text-slate-700 dark:text-slate-300'
                end %>">
            Customer ID: <%= @customer.generate_customer_id %>
          </span>
        </div>
        
        <div class="flex space-x-2">
          <% if @customer.pending_approval? %>
            <%= link_to "Activate", activate_customer_path(@customer), method: :patch, 
                confirm: "Activate #{@customer.business_name}?",
                class: "btn btn-success btn-sm" %>
          <% elsif @customer.active? %>
            <%= link_to "Suspend", suspend_customer_path(@customer), method: :patch,
                confirm: "Suspend #{@customer.business_name}?",
                class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="px-4 mb-16">
  <div class="container mx-auto max-w-4xl">
    <!-- Form Header -->
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">Edit Customer</h1>
      <p class="text-slate-600 dark:text-slate-400 text-lg">Update customer information and settings for <strong><%= @customer.business_name %></strong></p>
    </div>

    <%= form_with model: @customer, local: true, class: "space-y-8" do |f| %>
        
      <!-- Business Information Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Business Information</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Update business details and registration info</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Business Name *</label>
              <%= f.text_field :business_name, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 transition-all duration-200", 
                  placeholder: "Enter the business name",
                  required: true %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Business Type *</label>
              <%= f.select :business_type, 
                  options_for_select([['Select Type', '']] + @business_types.map { |type| [type.humanize, type] }, @customer.business_type),
                  {},
                  { class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 transition-all duration-200", required: true } %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Registration Number</label>
              <%= f.text_field :business_registration_number, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 transition-all duration-200", 
                  placeholder: "Optional registration number" %>
            </div>

            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Business Description</label>
              <%= f.text_area :business_description, 
                  rows: 3, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 transition-all duration-200 resize-none", 
                  placeholder: "Brief description of what the business does..." %>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Information Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Contact Information</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Update primary and secondary contact details</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Primary Contact Name *</label>
              <%= f.text_field :primary_contact_name, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-500 focus:ring-4 focus:ring-green-500/20 transition-all duration-200", 
                  placeholder: "Enter primary contact name",
                  required: true %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Primary Contact Phone *</label>
              <%= f.telephone_field :primary_contact_phone, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-500 focus:ring-4 focus:ring-green-500/20 transition-all duration-200", 
                  placeholder: "+1 (555) 123-4567",
                  required: true %>
            </div>

            <div class="md:col-span-2">
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Primary Contact Email *</label>
              <%= f.email_field :primary_contact_email, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-500 focus:ring-4 focus:ring-green-500/20 transition-all duration-200", 
                  placeholder: "contact@business.com",
                  required: true %>
            </div>

            <!-- Secondary Contact Section -->
            <div class="md:col-span-2 pt-6 border-t border-slate-200 dark:border-slate-600">
              <h4 class="text-base font-semibold text-slate-900 dark:text-white mb-4 flex items-center">
                <svg class="w-4 h-4 text-slate-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-8.803a3 3 0 00-6 0m6 0a3 3 0 01-6 0m6 0v1.5a2 2 0 01-2 2H9a2 2 0 01-2-2V15"></path>
                </svg>
                Secondary Contact (Optional)
              </h4>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Name</label>
                  <%= f.text_field :secondary_contact_name, 
                      class: "w-full px-3 py-2 border border-slate-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all duration-200", 
                      placeholder: "Optional contact name" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Email</label>
                  <%= f.email_field :secondary_contact_email, 
                      class: "w-full px-3 py-2 border border-slate-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all duration-200", 
                      placeholder: "secondary@business.com" %>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Phone</label>
                  <%= f.telephone_field :secondary_contact_phone, 
                      class: "w-full px-3 py-2 border border-slate-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all duration-200", 
                      placeholder: "Optional phone" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Business Address Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-purple-50 to-violet-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Business Address</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Update the business location and mailing address</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div class="space-y-6">
            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Full Address *</label>
              <%= f.text_area :business_address, 
                  rows: 2, 
                  class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/20 transition-all duration-200 resize-none", 
                  required: true, 
                  placeholder: "Street address, building number, suite, etc." %>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">City *</label>
                <%= f.text_field :city, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/20 transition-all duration-200", 
                    placeholder: "City name",
                    required: true %>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">State/Province</label>
                <%= f.text_field :state, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/20 transition-all duration-200", 
                    placeholder: "State or Province" %>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Postal Code</label>
                <%= f.text_field :postal_code, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/20 transition-all duration-200", 
                    placeholder: "Postal/Zip Code" %>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Country</label>
                <%= f.text_field :country, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-purple-500 focus:ring-4 focus:ring-purple-500/20 transition-all duration-200", 
                    placeholder: "Country" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Fleet Assignment & Account Management Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-orange-50 to-amber-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Fleet & Account Management</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Fleet assignment and account manager settings</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div class="space-y-6">
            <!-- Fleet Provider Selection -->
            <% if @fleet_providers.any? %>
              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Fleet Provider *</label>
                <%= f.select :fleet_provider_id, 
                    options_from_collection_for_select(@fleet_providers, :id, :name, @customer.fleet_provider_id),
                    { prompt: "Select Fleet Provider" },
                    { class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:border-orange-500 focus:ring-4 focus:ring-orange-500/20 transition-all duration-200", required: true } %>
              </div>
            <% else %>
              <!-- For fleet owners who can only manage their own fleet -->
              <div class="bg-blue-50 dark:bg-blue-900/20 border-2 border-blue-200 dark:border-blue-700 rounded-lg p-4">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-500 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-sm font-semibold text-blue-800 dark:text-blue-200">Fleet Assignment</h4>
                    <div class="mt-1 text-sm text-blue-700 dark:text-blue-300">
                      This customer is assigned to: <strong><%= @customer.fleet_provider&.name %></strong>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            
            <!-- Account Manager Assignment -->
            <div>
              <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Account Manager</label>
              <%= f.select :account_manager_id, 
                  options_for_select([['Unassigned', '']] + @account_managers.map { |am| [am.full_name, am.id] }, @customer.account_manager_id),
                  {},
                  { class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white focus:border-orange-500 focus:ring-4 focus:ring-orange-500/20 transition-all duration-200" } %>
              <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">The team member who will manage this customer account</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Delivery Settings & Preferences Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-cyan-50 to-teal-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-cyan-100 dark:bg-cyan-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Delivery Settings & Preferences</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Configure delivery parameters and payment methods</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div class="space-y-8">
            <!-- Delivery Configuration -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Maximum Delivery Radius (km)</label>
                <%= f.number_field :max_delivery_radius_km, 
                    min: 1, max: 100, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200" %>
                <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">How far this customer is willing to deliver (1-100 km)</p>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Preparation Time (minutes)</label>
                <%= f.number_field :estimated_prep_time_minutes, 
                    min: 5, max: 240, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200" %>
