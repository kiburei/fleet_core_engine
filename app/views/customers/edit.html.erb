              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Base Delivery Rate ($)</label>
                <%= f.number_field :base_delivery_rate, 
                    step: 0.01, min: 0, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200", 
                    placeholder: "Leave empty for default rate" %>
                <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">Base fee per delivery (leave empty to use fleet default)</p>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Per KM Rate ($)</label>
                <%= f.number_field :per_km_rate, 
                    step: 0.01, min: 0, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200", 
                    placeholder: "Leave empty for default rate" %>
                <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">Additional fee per kilometer (leave empty to use fleet default)</p>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Minimum Order Value ($)</label>
                <%= f.number_field :minimum_order_value, 
                    step: 0.01, min: 0, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200" %>
                <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">Minimum order value for deliveries</p>
              </div>

              <div>
                <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Free Delivery Threshold ($)</label>
                <%= f.number_field :free_delivery_threshold, 
                    step: 0.01, min: 0, 
                    class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/20 transition-all duration-200", 
                    placeholder: "Optional" %>
                <p class="mt-2 text-xs text-slate-600 dark:text-slate-400">Order value above which delivery is free</p>
              </div>
            </div>

            <!-- Payment Methods Section -->
            <div class="pt-6 border-t border-slate-200 dark:border-slate-600">
              <label class="block text-base font-semibold text-slate-900 dark:text-white mb-4">Payment Methods Accepted</label>
              <div class="grid grid-cols-2 gap-4">
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <%= f.check_box :allows_cash_on_delivery, class: "rounded text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Cash on Delivery</span>
                </label>
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <%= f.check_box :allows_card_on_delivery, class: "rounded text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Card on Delivery</span>
                </label>
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <%= f.check_box :allows_contactless_delivery, class: "rounded text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Contactless Delivery</span>
                </label>
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <%= f.check_box :requires_signature, class: "rounded text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Require Signature</span>
                </label>
              </div>
            </div>

            <!-- Payment Responsibility Section -->
            <div class="pt-6 border-t border-slate-200 dark:border-slate-600">
              <label class="block text-base font-semibold text-slate-900 dark:text-white mb-4">Who Pays Delivery Fee?</label>
              <div class="space-y-3">
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors cursor-pointer">
                  <%= f.radio_button :default_payment_method, 'customer_pays', class: "text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Customer pays delivery fee</span>
                </label>
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors cursor-pointer">
                  <%= f.radio_button :default_payment_method, 'business_pays', class: "text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Business pays delivery fee</span>
                </label>
                <label class="flex items-center space-x-3 p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors cursor-pointer">
                  <%= f.radio_button :default_payment_method, 'split_payment', class: "text-cyan-600 focus:ring-cyan-500 focus:ring-offset-0" %>
                  <span class="text-sm font-medium text-slate-900 dark:text-white">Split payment between business and customer</span>
                </label>
              </div>
              
              <div id="split-payment-options" class="mt-4 <%= 'hidden' unless @customer.split_payment? %>">
                <div class="p-4 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600">
                  <label class="block text-sm font-medium text-slate-900 dark:text-white mb-2">Business pays what percentage?</label>
                  <div class="flex items-center space-x-2">
                    <%= f.number_field :business_payment_percentage, 
                        min: 0, max: 100, 
                        class: "w-24 px-3 py-2 border border-slate-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-600 text-slate-900 dark:text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20" %>
                    <span class="text-sm text-slate-600 dark:text-slate-400">% (Customer pays the remainder)</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Information Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="bg-gradient-to-r from-rose-50 to-pink-50 dark:from-slate-800 dark:to-slate-700 px-6 py-4 border-b border-slate-200 dark:border-slate-600">
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-rose-100 dark:bg-rose-900 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-rose-600 dark:text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Additional Information</h3>
              <p class="text-sm text-slate-600 dark:text-slate-400">Special terms, notes, and custom arrangements</p>
            </div>
          </div>
        </div>
        
        <div class="p-6 bg-slate-50/50 dark:bg-slate-800/50">
          <div>
            <label class="block text-sm font-semibold text-slate-900 dark:text-white mb-2">Special Terms or Notes</label>
            <%= f.text_area :special_terms, 
                rows: 4, 
                class: "w-full px-4 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-500 dark:placeholder-slate-400 focus:border-rose-500 focus:ring-4 focus:ring-rose-500/20 transition-all duration-200 resize-none", 
                placeholder: "Any special arrangements, terms, or notes about this customer..." %>
          </div>
        </div>
      </div>

      <!-- Error Messages -->
      <% if @customer.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border-2 border-red-200 dark:border-red-700 rounded-xl p-6">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-base font-semibold text-red-800 dark:text-red-200">Please fix the following errors:</h3>
              <ul class="mt-2 text-sm text-red-700 dark:text-red-300 list-disc list-inside space-y-1">
                <% @customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Submit Buttons -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border-2 border-slate-200 dark:border-slate-600 overflow-hidden">
        <div class="p-6">
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
            <%= link_to "Cancel", customer_path(@customer), 
                class: "inline-flex justify-center items-center px-6 py-3 border-2 border-slate-300 dark:border-slate-600 rounded-lg text-sm font-semibold text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-700 hover:bg-slate-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-4 focus:ring-slate-500/20 transition-all duration-200" %>
            
            <div class="flex space-x-3">
              <%= f.submit "Update Customer", 
                  class: "inline-flex justify-center items-center px-8 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white text-sm font-semibold rounded-lg shadow-lg hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-blue-500/50 transform hover:-translate-y-0.5 transition-all duration-200" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle split payment options
  const paymentRadios = document.querySelectorAll('input[name*="default_payment_method"]');
  const splitOptions = document.getElementById('split-payment-options');

  function toggleSplitOptions() {
    const splitSelected = document.querySelector('input[name*="default_payment_method"][value="split_payment"]:checked');
    if (splitSelected) {
      splitOptions.classList.remove('hidden');
    } else {
      splitOptions.classList.add('hidden');
    }
  }

  paymentRadios.forEach(radio => {
    radio.addEventListener('change', toggleSplitOptions);
  });

  // Auto-format phone numbers
  const phoneFields = document.querySelectorAll('input[type="tel"]');
  phoneFields.forEach(field => {
    field.addEventListener('input', function() {
      let value = this.value.replace(/\D/g, '');
      if (value.startsWith('0')) {
        value = '254' + value.substring(1);
      }
      if (value.length > 12) {
        value = value.substring(0, 12);
      }
      if (value.length > 3) {
        value = '+' + value.substring(0, 3) + ' ' + value.substring(3);
      }
      if (value.length > 8) {
        value = value.substring(0, 8) + ' ' + value.substring(8);
      }
      this.value = value;
    });
  });
});
</script>