<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Customer Management" } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Analytics", analytics_customers_path, class: "btn btn-secondary" %>
      <%= link_to "Export", customers_path(format: :csv), class: "btn btn-secondary" %>
      <%= link_to "Add Customer", new_customer_path, class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Customer Management" %>

<!-- Stats Cards -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Customer Overview</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
            <%= icon "users", class: "size-6 text-blue-600 dark:text-blue-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Total Customers</p>
            <p class="text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:total_customers] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <%= icon "check-circle", class: "size-6 text-green-600 dark:text-green-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Active</p>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @stats[:active_customers] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
            <%= icon "clock", class: "size-6 text-yellow-600 dark:text-yellow-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Pending Approval</p>
            <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @stats[:pending_approval] %></p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
            <%= icon "star", class: "size-6 text-purple-600 dark:text-purple-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Avg Rating</p>
            <p class="text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @stats[:average_rating] %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-4">
      <%= form_with url: customers_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |f| %>
        <div>
          <%= f.text_field :search, value: params[:search], placeholder: "Search customers...", class: "form-input" %>
        </div>
        
        <div>
          <%= f.select :status,
              options_for_select([
                ['All Statuses', ''],
                ['Active', 'active'],
                ['Pending Approval', 'pending_approval'],
                ['Suspended', 'suspended'],
                ['Inactive', 'inactive']
              ], params[:status]),
              {},
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.select :business_type,
              options_for_select([['All Types', '']] + @business_types.map { |type| [type.humanize, type] }, params[:business_type]),
              {},
              { class: "form-select" } %>
        </div>
        
        <div>
          <%= f.submit "Filter", class: "btn btn-primary" %>
        </div>
        
        <% if !params.except(:controller, :action).empty? %>
          <%= link_to "Clear", customers_path, class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 dark:hover:text-slate-300" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<!-- Customers Table -->
<div class="px-4 mb-16">
  <div class="container mx-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 overflow-hidden">
      <div class="max-h-[calc(100vh-400px)] overflow-y-auto">
        <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-600">
          <thead class="bg-slate-50 dark:bg-slate-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Business</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Contact</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Deliveries</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Revenue</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-600">
            <% @customers.each do |customer| %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-700 transition ease-in-out duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white">
                      <%= link_to customer.business_name, customer_path(customer), class: "hover:text-primary-600 dark:hover:text-primary-400" %>
                    </div>
                    <div class="text-sm text-slate-500 dark:text-slate-400"><%= customer.business_type&.humanize %></div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white"><%= customer.primary_contact_name %></div>
                    <div class="text-sm text-slate-500 dark:text-slate-400">
                      <a href="mailto:<%= customer.primary_contact_email %>" class="hover:text-primary-600 dark:hover:text-primary-400">
                        <%= customer.primary_contact_email %>
                      </a>
                    </div>
                    <div class="text-xs text-slate-500 dark:text-slate-400"><%= customer.primary_contact_phone %></div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    <%= case customer.status
                        when 'active' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                        when 'pending_approval' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400'
                        when 'suspended' then 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                        when 'inactive' then 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                        else 'bg-slate-100 text-slate-800 dark:bg-slate-900/30 dark:text-slate-400'
                        end %>">
                    <%= customer.status.humanize %>
                  </span>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-medium text-slate-900 dark:text-white"><%= customer.total_deliveries_count %></div>
                    <div class="text-sm text-slate-500 dark:text-slate-400">
                      Rating: <%= customer.customer_rating ? number_with_precision(customer.customer_rating, precision: 1) : 'N/A' %>
                    </div>
                  </div>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900 dark:text-white">
                  $<%= number_with_delimiter(customer.total_revenue) %>
                </td>
                
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", customer_path(customer), class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300" %>
                  <%= link_to "Edit", edit_customer_path(customer), class: "text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300" %>
                  
                  <% if customer.pending_approval? %>
                    <%= link_to "Activate", activate_customer_path(customer), method: :patch, 
                        confirm: "Activate #{customer.business_name}?", class: "text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300" %>
                  <% elsif customer.active? %>
                    <%= link_to "Suspend", suspend_customer_path(customer), method: :patch, 
                        confirm: "Suspend #{customer.business_name}?", class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @customers.empty? %>
          <div class="text-center py-12">
            <%= icon "users", class: "mx-auto size-12 text-slate-400 dark:text-slate-500" %>
            <h3 class="mt-2 text-sm font-medium text-slate-900 dark:text-white">No customers found</h3>
            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">Get started by adding your first customer.</p>
            <div class="mt-6">
              <%= link_to "Add Customer", new_customer_path, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Pagination -->
<% if @customers.respond_to?(:current_page) %>
  <div class="px-4 mt-6">
    <div class="container mx-auto flex justify-center">
      <%= paginate @customers, theme: 'tailwind' %>
    </div>
  </div>
<% end %>
