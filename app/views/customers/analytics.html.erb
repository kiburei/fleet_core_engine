<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: "Customer Analytics" } do %>
    <div class="flex items-center gap-3">
      <div class="relative">
        <select id="date-range-select" class="form-select">
          <option value="7" <%= 'selected' if params[:date_range] == '7' %>>Last 7 days</option>
          <option value="30" <%= 'selected' if params[:date_range] == '30' || params[:date_range].blank? %>>Last 30 days</option>
          <option value="90" <%= 'selected' if params[:date_range] == '90' %>>Last 90 days</option>
          <option value="365" <%= 'selected' if params[:date_range] == '365' %>>Last year</option>
        </select>
      </div>
      <%= link_to "Back to Customers", customers_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Customer Analytics" %>

<!-- Key Metrics -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Analytics Overview</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
            <%= icon "users", class: "size-6 text-blue-600 dark:text-blue-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Total Customers</p>
            <p class="text-2xl font-bold text-slate-900 dark:text-white"><%= @analytics_data[:total_customers] %></p>
            <p class="text-xs text-green-600 dark:text-green-400">
              +<%= @analytics_data[:new_customers_this_period] %> this period
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <%= icon "check-circle", class: "size-6 text-green-600 dark:text-green-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Active Customers</p>
            <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @analytics_data[:active_customers] %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">
              <%= number_with_precision((@analytics_data[:active_customers].to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>% of total
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-emerald-100 dark:bg-emerald-900/30 rounded-lg">
            <%= icon "currency-dollar", class: "size-6 text-emerald-600 dark:text-emerald-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Total Revenue</p>
            <p class="text-2xl font-bold text-emerald-600 dark:text-emerald-400"><%= number_to_currency(@analytics_data[:total_customer_revenue], unit: 'KES ') %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">
              from your customers
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-orange-100 dark:bg-orange-900/30 rounded-lg">
            <%= icon "truck", class: "size-6 text-orange-600 dark:text-orange-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Avg Deliveries</p>
            <p class="text-2xl font-bold text-orange-600 dark:text-orange-400"><%= @analytics_data[:avg_deliveries_per_customer] %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">per customer</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Charts Section -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Customer Status Distribution -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Customer Status Distribution</h3>
      <div class="space-y-3">
        <% ['active', 'pending_approval', 'suspended', 'inactive'].each do |status| %>
          <% count = @analytics_data[:active_customers] if status == 'active' %>
          <% count = @analytics_data[:pending_approval] if status == 'pending_approval' %>
          <% count = @analytics_data[:suspended_customers] if status == 'suspended' %>
          <% count ||= 0 %>
          <% next if count == 0 %>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3 
                <%= case status
                    when 'active' then 'bg-green-500'
                    when 'pending_approval' then 'bg-yellow-500'
                    when 'suspended' then 'bg-red-500'
                    when 'inactive' then 'bg-gray-500'
                    else 'bg-gray-300'
                    end %>"></div>
              <span class="text-sm text-slate-700 dark:text-slate-300"><%= status.humanize %></span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium text-slate-900 dark:text-slate-100"><%= count %></span>
              <span class="text-xs text-slate-500 dark:text-slate-400">
                (<%= number_with_precision((count.to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>%)
              </span>
            </div>
          </div>
          <div class="w-full bg-slate-200 dark:bg-slate-600 rounded-full h-2">
            <div class="h-2 rounded-full 
              <%= case status
                  when 'active' then 'bg-green-500'
                  when 'pending_approval' then 'bg-yellow-500'
                  when 'suspended' then 'bg-red-500'
                  when 'inactive' then 'bg-gray-500'
                  else 'bg-gray-300'
                  end %>"
                 style="width: <%= (count.to_f / @analytics_data[:total_customers]) * 100 %>%"></div>
          </div>
        <% end %>
      </div>
    </div>

      <!-- Business Type Distribution -->
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-4">Business Types</h3>
      <div class="space-y-3">
        <% @analytics_data[:customers_by_type].sort_by { |_, count| -count }.first(8).each_with_index do |(type, count), index| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3" style="background-color: hsl(<%= (index * 45) % 360 %>, 70%, 60%)"></div>
              <span class="text-sm text-slate-700 dark:text-slate-300"><%= type&.humanize || 'Unknown' %></span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium text-slate-900 dark:text-slate-100"><%= count %></span>
              <span class="text-xs text-slate-500 dark:text-slate-400">
                (<%= number_with_precision((count.to_f / @analytics_data[:total_customers]) * 100, precision: 1) %>%)
              </span>
            </div>
          </div>
          <div class="w-full bg-slate-200 dark:bg-slate-600 rounded-full h-2">
            <div class="h-2 rounded-full" 
                 style="width: <%= (count.to_f / @analytics_data[:total_customers]) * 100 %>%; background-color: hsl(<%= (index * 45) % 360 %>, 70%, 60%)"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Performance Metrics -->
<div class="px-4 mb-6">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Performance Metrics</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
            <%= icon "clock", class: "size-6 text-yellow-600 dark:text-yellow-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Pending Approvals</p>
            <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @analytics_data[:pending_approval] %></p>
            <% if @analytics_data[:pending_approval] > 0 %>
              <%= link_to "Review Now", customers_path(status: 'pending_approval'), class: "text-xs text-yellow-600 dark:text-yellow-400 hover:text-yellow-800 dark:hover:text-yellow-300 underline" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
            <%= icon "heart", class: "size-6 text-purple-600 dark:text-purple-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">High Volume</p>
            <p class="text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @analytics_data[:high_volume_customers] %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">100+ deliveries</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg">
            <%= icon "star", class: "size-6 text-indigo-600 dark:text-indigo-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Top Rated</p>
            <p class="text-2xl font-bold text-indigo-600 dark:text-indigo-400"><%= @analytics_data[:top_rated_customers] %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">4.0+ rating</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center">
          <div class="p-2 bg-pink-100 dark:bg-pink-900/30 rounded-lg">
            <%= icon "star", class: "size-6 text-pink-600 dark:text-pink-400" %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-slate-600 dark:text-slate-400">Avg Rating</p>
            <p class="text-2xl font-bold text-pink-600 dark:text-pink-400"><%= @analytics_data[:average_rating] %></p>
            <p class="text-xs text-slate-600 dark:text-slate-400">out of 5.0</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Action Items -->
<div class="px-4 mb-16">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold text-slate-800 dark:text-white mb-4">Action Items</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% if @analytics_data[:pending_approval] > 0 %>
        <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
          <div class="flex items-center mb-3">
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg">
              <%= icon "clock", class: "size-5 text-yellow-600 dark:text-yellow-400" %>
            </div>
            <h4 class="text-sm font-medium text-slate-900 dark:text-white ml-3">Pending Reviews</h4>
          </div>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4"><%= @analytics_data[:pending_approval] %> customers waiting for approval</p>
          <%= link_to "Review Applications", customers_path(status: 'pending_approval'), class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>
      
      <% if @analytics_data[:suspended_customers] > 0 %>
        <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
          <div class="flex items-center mb-3">
            <div class="p-2 bg-red-100 dark:bg-red-900/30 rounded-lg">
              <%= icon "x-circle", class: "size-5 text-red-600 dark:text-red-400" %>
            </div>
            <h4 class="text-sm font-medium text-slate-900 dark:text-white ml-3">Suspended Accounts</h4>
          </div>
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-4"><%= @analytics_data[:suspended_customers] %> customers suspended</p>
          <%= link_to "Review Suspended", customers_path(status: 'suspended'), class: "btn btn-danger btn-sm" %>
        </div>
      <% end %>

      <div class="bg-white dark:bg-slate-800 rounded-lg shadow border border-slate-200 dark:border-slate-600/80 p-6">
        <div class="flex items-center mb-3">
          <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <%= icon "trending-up", class: "size-5 text-green-600 dark:text-green-400" %>
          </div>
          <h4 class="text-sm font-medium text-slate-900 dark:text-white ml-3">Growth Opportunity</h4>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">Focus on high-value customers</p>
        <%= link_to "View High Volume", customers_path, class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
</div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Date range selector
  const dateRangeSelect = document.getElementById('date-range-select');
  if (dateRangeSelect) {
    dateRangeSelect.addEventListener('change', function() {
      const currentUrl = new URL(window.location);
      currentUrl.searchParams.set('date_range', this.value);
      window.location.href = currentUrl.toString();
    });
  }

  // Add tooltips to chart bars
  document.querySelectorAll('[title]').forEach(element => {
    element.addEventListener('mouseenter', function() {
      // Simple tooltip implementation
      const tooltip = document.createElement('div');
      tooltip.className = 'fixed bg-slate-800 dark:bg-slate-700 text-white px-2 py-1 rounded text-xs z-50';
      tooltip.textContent = this.getAttribute('title');
      document.body.appendChild(tooltip);
      
      const rect = this.getBoundingClientRect();
      tooltip.style.left = (rect.left + rect.width / 2 - tooltip.offsetWidth / 2) + 'px';
      tooltip.style.top = (rect.top - tooltip.offsetHeight - 5) + 'px';
      
      this._tooltip = tooltip;
    });
    
    element.addEventListener('mouseleave', function() {
      if (this._tooltip) {
        document.body.removeChild(this._tooltip);
        this._tooltip = null;
      }
    });
  });
});
</script>