<% content_for :header do %>
  <%= render "rui/shared/admin/nav", { header_title: @customer.business_name } do %>
    <div class="flex items-center gap-3">
      <%= link_to "Back to Customers", customers_path, class: "btn btn-secondary" %>
      <%= link_to "Edit Customer", edit_customer_path(@customer), class: "btn btn-secondary" %>
      
      <% if @customer.pending_approval? %>
        <%= link_to "Activate", activate_customer_path(@customer), method: :patch, 
            confirm: "Activate #{@customer.business_name}?", 
            class: "btn btn-success" %>
      <% elsif @customer.active? %>
        <%= link_to "Suspend", suspend_customer_path(@customer), method: :patch, 
            confirm: "Suspend #{@customer.business_name}?", 
            class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
<% end %>

<% content_for :title, "Customer: #{@customer.business_name}" %>

<!-- Header Section -->
<div class="px-4 mb-6">
  <div class="container mx-auto max-w-7xl">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-600 overflow-hidden">
      <div class="bg-slate-50 dark:bg-slate-800 px-8 py-6 border-b border-slate-200 dark:border-slate-600">
        <div class="flex items-start justify-between">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2"><%= @customer.business_name %></h1>
              <p class="text-lg text-slate-600 dark:text-slate-400 mb-3"><%= @customer.business_type&.humanize || 'Business' %></p>
              
              <!-- Enhanced Status Badge -->
              <div class="flex items-center space-x-3">
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold shadow-sm
                  <%= case @customer.status
                      when 'active' then 'bg-green-100 text-green-800 border border-green-300 dark:bg-green-900/30 dark:text-green-300 dark:border-green-600'
                      when 'pending_approval' then 'bg-yellow-100 text-yellow-800 border border-yellow-300 dark:bg-yellow-900/30 dark:text-yellow-300 dark:border-yellow-600'
                      when 'suspended' then 'bg-red-100 text-red-800 border border-red-300 dark:bg-red-900/30 dark:text-red-300 dark:border-red-600'
                      when 'inactive' then 'bg-gray-100 text-gray-800 border border-gray-300 dark:bg-gray-900/30 dark:text-gray-300 dark:border-gray-600'
                      else 'bg-gray-100 text-gray-800 border border-gray-300 dark:bg-gray-900/30 dark:text-gray-300 dark:border-gray-600'
                      end %>">
                  <%= @customer.status.humanize %>
                </span>
                <% if @customer.fleet_provider&.name %>
                  <span class="text-sm text-slate-600 dark:text-slate-400">
                    Fleet: <strong class="text-slate-900 dark:text-white"><%= @customer.fleet_provider.name %></strong>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Quick Action Buttons -->
          <div class="flex items-center space-x-3">
            <% if @customer.pending_approval? %>
              <%= button_to "Activate", activate_customer_path(@customer), 
                  method: :patch, 
                  confirm: "Activate #{@customer.business_name}?", 
                  class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200 border-0" %>
            <% elsif @customer.active? %>
              <%= button_to "Suspend", suspend_customer_path(@customer), 
                  method: :patch,
                  confirm: "Suspend #{@customer.business_name}?",
                  class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200 border-0" %>
            <% end %>
            <%= link_to "Edit Customer", edit_customer_path(@customer), 
                class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
          </div>
        </div>
        
        <!-- Status Description -->
        <% if @customer.status.present? %>
          <div class="mt-4 p-3 rounded-lg
            <%= case @customer.status
                when 'active' then 'bg-green-50 border border-green-200 dark:bg-green-900/20 dark:border-green-700'
                when 'pending_approval' then 'bg-yellow-50 border border-yellow-200 dark:bg-yellow-900/20 dark:border-yellow-700'
                when 'suspended' then 'bg-red-50 border border-red-200 dark:bg-red-900/20 dark:border-red-700'
                when 'inactive' then 'bg-slate-50 border border-slate-200 dark:bg-slate-700 dark:border-slate-600'
                else 'bg-slate-50 border border-slate-200 dark:bg-slate-700 dark:border-slate-600'
                end %>">
            <p class="text-sm font-medium
              <%= case @customer.status
                  when 'active' then 'text-green-800 dark:text-green-300'
                  when 'pending_approval' then 'text-yellow-800 dark:text-yellow-300'
                  when 'suspended' then 'text-red-800 dark:text-red-300'
                  when 'inactive' then 'text-slate-700 dark:text-slate-300'
                  else 'text-slate-700 dark:text-slate-300'
                  end %>">
              <%= case @customer.status
                  when 'active' then "✓ This customer is active and can receive deliveries."
                  when 'pending_approval' then "⏳ This customer is awaiting approval. Review their information and activate when ready."
                  when 'suspended' then "⚠️ This customer is suspended and cannot receive deliveries."
                  when 'inactive' then "💤 This customer is inactive."
                  else "❓ Status unknown."
                  end %>
            </p>
            <% if @customer.status_notes.present? %>
              <p class="text-xs mt-1 opacity-80"><%= @customer.status_notes %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

