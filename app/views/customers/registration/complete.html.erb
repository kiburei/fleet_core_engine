<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="text-center">
      <!-- Success Icon -->
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <!-- Progress Indicator -->
      <div class="mb-8">
        <div class="flex items-center justify-center space-x-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <span class="ml-2 text-sm font-medium text-green-600">Business Info</span>
          </div>
          <div class="flex-shrink-0 w-16 h-0.5 bg-green-600"></div>
          <div class="flex items-center">
            <div class="flex-shrink-0 w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <span class="ml-2 text-sm font-medium text-green-600">Review</span>
          </div>
          <div class="flex-shrink-0 w-16 h-0.5 bg-green-600"></div>
          <div class="flex items-center">
            <div class="flex-shrink-0 w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <span class="ml-2 text-sm font-medium text-green-600">Complete</span>
          </div>
        </div>
      </div>

      <h1 class="text-3xl font-extrabold text-gray-900 mb-4">
        Registration Submitted Successfully!
      </h1>
      
      <p class="text-lg text-gray-600 mb-8">
        Thank you for joining our delivery network. We've received your business registration.
      </p>
    </div>

    <!-- Registration Details Card -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-blue-50 border-b border-blue-200">
        <h2 class="text-lg font-medium text-blue-900">Registration Details</h2>
      </div>
      <div class="px-6 py-4">
        <% if @customer %>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Business Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.business_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Business Type</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.business_type&.humanize %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Primary Contact</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.primary_contact_name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.primary_contact_email %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Phone</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.primary_contact_phone %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Registration Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.created_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
            </div>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Fleet Provider</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @customer.fleet_provider&.name %></dd>
            </div>
          </dl>
        <% end %>
      </div>
    </div>

    <!-- What Happens Next -->
    <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
      <div class="px-6 py-4 bg-yellow-50 border-b border-yellow-200">
        <h2 class="text-lg font-medium text-yellow-900">What Happens Next?</h2>
      </div>
      <div class="px-6 py-4">
        <div class="space-y-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-8 w-8 rounded-full bg-yellow-100">
                <span class="text-sm font-medium text-yellow-800">1</span>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-medium text-gray-900">Application Review</h3>
              <p class="text-sm text-gray-600">
                Our team will review your application within 2-3 business days. We'll verify your business information and contact details.
              </p>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-8 w-8 rounded-full bg-yellow-100">
                <span class="text-sm font-medium text-yellow-800">2</span>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-medium text-gray-900">Email Confirmation</h3>
              <p class="text-sm text-gray-600">
                You'll receive an email notification once your application has been approved or if we need additional information.
              </p>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-8 w-8 rounded-full bg-yellow-100">
                <span class="text-sm font-medium text-yellow-800">3</span>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-medium text-gray-900">Account Activation</h3>
              <p class="text-sm text-gray-600">
                Once approved, your account will be activated and you can start receiving delivery orders from customers.
              </p>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-8 w-8 rounded-full bg-yellow-100">
                <span class="text-sm font-medium text-yellow-800">4</span>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-medium text-gray-900">Onboarding Support</h3>
              <p class="text-sm text-gray-600">
                Our support team will help you get set up with your delivery preferences and integration options.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Important Information -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Important Information</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Check your email regularly for updates on your application status</li>
              <li>Make sure your business information is accurate to avoid delays</li>
              <li>You can contact our support team if you have any questions</li>
              <li>Once approved, you'll receive login credentials to access your dashboard</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="text-center space-y-4">
      <div class="space-x-4">
        <%= link_to "Back to Home", root_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
        <a href="mailto:support@fleetcore.co.ke" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
          Contact Support
        </a>
      </div>
      
      <p class="text-sm text-gray-600">
        Need immediate assistance? Call us at 
        <a href="tel:+254700000000" class="text-blue-600 hover:text-blue-500">+254 700 000 000</a>
      </p>
    </div>

    <!-- Reference Number -->
    <% if @customer %>
      <div class="mt-8 text-center">
        <p class="text-xs text-gray-500">
          Reference Number: <span class="font-mono"><%= @customer.generate_customer_id rescue "REG-#{@customer.id}" %></span>
        </p>
      </div>
    <% end %>
  </div>
</div>

